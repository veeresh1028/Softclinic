    var GetSignaturename = function  (person) {
        $.ajax({
            url: '@Url.Action("GetSignature", "SignaturePad", new { area = "Common" })?appId=' + @emr.appId + '&person=' + person + '&form=MinorsPsychotherapyConsent',
            type: "GET",
            dataType: "json",
            async: false,
