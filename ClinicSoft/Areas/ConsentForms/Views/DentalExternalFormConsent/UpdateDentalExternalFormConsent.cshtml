        uctx.beginPath();
        uctx.moveTo(x - 8, y - 16);
        uctx.lineTo(x + 8, y - 16);
        uctx.lineTo(x + 4, y - 2);
        uctx.lineTo(x - 4, y - 2);
        uctx.closePath();
        uctx.stroke();
        udrawingHistory.push(ucanvas.toDataURL());
    }

