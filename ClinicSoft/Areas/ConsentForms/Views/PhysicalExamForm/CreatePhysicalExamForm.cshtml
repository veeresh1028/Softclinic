        var y = e.clientY - rect.top;

        if (isErasing) {
            erase(x, y);
        } else {
            if (DrawingMode === 'dot') {
                drawDot(x, y);
            } else if (DrawingMode === 'check') {
                drawcheckMark(x, y);
            }
            else if (DrawingMode === 'circle') {
