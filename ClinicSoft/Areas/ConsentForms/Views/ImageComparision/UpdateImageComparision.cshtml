    $('#btn_Print').html("Printing the Record....");
    $.ajax({
        type: "Get",
        url: "@Url.Action("PrintPDFConsent", "ImageComparision", new {area = "ConsentForms" })?appId=" + @emr.appId + "&form=ImageComparision",
