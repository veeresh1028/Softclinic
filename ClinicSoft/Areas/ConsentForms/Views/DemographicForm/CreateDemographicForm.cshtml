            @Html.TextBoxFor(m => m.cdf_Relationship, new { @class = "form-control", @id = "cdf_Relationship", @width = "20px" })
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 mb-2 mt-2 fw-bold">Were you ever prescribed the following:</div>
