                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fe fe-calendar"></i>
                        </div>
                    </div>
                    <input id="cdf_date2" class="form-control" placeholder="DD-MMM-YYYY" type="text" autocomplete="off">
