    //#region Add  Click
    $('#btn_Insert').on('click', function (e) {
        e.preventDefault();
        if ($("#form_ColposcopyReferral").valid()) {
            $('#btn_Insert').removeClass("btn btn-sm btn-success");
            $('#btn_Insert').addClass("btn btn-sm btn-success btn-loaders btn-icon");
            $('#btn_Insert').html("Saving the Record....");

            var crn_radio1 = "";
            if ($('#crn_radio11').prop('checked')) {
                crn_radio1 = "1";
            }
            else if ($('#crn_radio12').prop('checked')) {
                crn_radio1 = "2";
            }

            var _dateInsert = {
                "crnId": 0,
                "crn_appId": @emr.appId,
                "crn_1": $("#crn_1").val(),
                "crn_2": $("#crn_2").val(),
                "crn_3": $("#crn_3").val(),
