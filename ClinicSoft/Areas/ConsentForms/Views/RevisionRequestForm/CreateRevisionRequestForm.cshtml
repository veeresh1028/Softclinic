                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fe fe-calendar"></i>
                    </div>
                </div>
                <input id="rrf_date1" class="form-control" placeholder="DD-MMM-YYYY" type="text" autocomplete="off">
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-2 mt-2">
            Name&nbsp; <label class="form-label text-red text-left text-capitalize">@emr.pat_name&nbsp;</label>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-2 mt-2">
            MRN&nbsp; <label class="form-label text-red text-left text-capitalize">@emr.pat_code&nbsp;</label>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-2 mt-2">
            Card No. @Html.TextBoxFor(m => m.rrf_1, new { @class = "form-control", @placeholder = "Ex : 549LI324", @maxlength = "10", @id = "rrf_1" })
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-2 mt-2">
            Present Auth No @Html.TextBoxFor(m => m.rrf_2, new { @class = "form-control", @placeholder = "Ex : 549LI324", @maxlength = "10", @id = "rrf_2" })
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-2 mt-2">
            Requested Date&nbsp;
