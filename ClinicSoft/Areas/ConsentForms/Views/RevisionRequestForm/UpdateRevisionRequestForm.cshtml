    var clearControls = function () {
        $(".form-control").val("");
        $("#upaf_8").bootstrapdatepicker("setDate", '');
        $(".form-control-sm").val("");
        $("input[name='urrf_7']:radio").prop('checked', false);
        $("#urrf_date1").bootstrapdatepicker("setDate", '');
        $("#urrf_date2").bootstrapdatepicker("setDate", '');
        $("#urrf_date3").bootstrapdatepicker("setDate", '');
        $("#upat_sign").attr("src", "");

    }
    //#endregion Clear Controls

