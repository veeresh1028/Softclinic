               "appId": @emr.appId,
               "formname":"DmaxLaserTreatment",
               "formlink":"",
               "eSign":""
           }
           $.ajax({
               type: "GET",
               url: "@Url.Action("WacomTabSignaturePad", "WacomTabSignaturePad", new { area = "Common" })",
               contentType: "application/json",
               dataType: "html",
               data: _data,
               success: function (response) {
