@model BusinessEntities.Accounts.Accounting.Journals

<style type="text/css">
    #sizeCJ {
        max-width: 1500px;
    }

    #tbl_list_entries_wrapper .dataTables_scroll .dataTables_scrollBody {
        min-height: 250px;
    }
</style>

<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold">Create Journal</h5>
    <button aria-label="Close" data-bs-dismiss="modal" class="btn-close" type="button"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body p-4">
    @Html.AntiForgeryToken()

    <form id="form_AddJournal" autocomplete="off" title="">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.j_branch, new SelectList(Model.BranchList, "id", "text"), "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Period&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.j_acc_period, new SelectList(Model.PeriodList, "id", "text"), "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-0">
                    <label class="form-label" title="">Date&nbsp;<span class="text-danger">*</span> </label>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fe fe-calendar"></i>
                        </div>
                    </div>
                    @Html.TextBoxFor(model => model.j_date, new { @class = "form-control", @placeholder = "Select Journal Entry Date", maxlength = "18" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-0">
                    <label class="form-label" title="">Type&nbsp;<span class="text-danger">*</span> </label>
                    @Html.DropDownListFor(m => m.j_type, new List<SelectListItem>
                    {   new SelectListItem{ Value="Sale", Text="Sale"},
                        new SelectListItem{ Value="Receipt", Text="Receipt"},
                        new SelectListItem{ Value="Purchase", Text="Purchase"},
                        new SelectListItem{ Value="Payment", Text="Payment"},
                        new SelectListItem{ Value="Journal", Text="Journal"}
                    }, "Select Entry Type", new { @class = "form-select select2 mb-4" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Referrence #&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.j_refno, new { @class = "form-control disabled text-danger", @placeholder = "JV-SAL-00001", @maxlength = "25", @readonly = "readonly" })
                </div>
            </div>
        </div>

        <div class="row mb-2" id="purchase_payment">
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Supplier</label>
                    @Html.DropDownListFor(m => m.j_supplier, new List<SelectListItem> { }, "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Invoice #</label>
                    @Html.TextBoxFor(m => m.j_inv_no, new { @class = "form-control", @placeholder = "Ex : INV-00673", @maxlength = "25" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-0">
                    <label class="form-label" title="">Invoice Date</label>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fe fe-calendar"></i>
                        </div>
                    </div>
                    @Html.TextBoxFor(model => model.j_inv_date, new { @class = "form-control", @placeholder = "Select Invoice Date", maxlength = "18" })
                </div>
            </div>
        </div>
    </form>

    <form id="form_JournalEntries" class="mb-2" autocomplete="off" title="">
        <div class="row mt-2" id="journal_items">
            <div class="col-sm-12 col-md-12 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Account&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.j_account, new List<SelectListItem> { }, "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Description</label>
                    @Html.TextBoxFor(m => m.j_desc, new { @class = "form-control", @placeholder = "Ex : Gloves Sold", @maxlength = "250" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-0">
                    <label class="form-label" title="">Dr./Cr.&nbsp;<span class="text-danger">*</span> </label>
                    @Html.DropDownListFor(m => m.j_ttype, new List<SelectListItem>
                    {   new SelectListItem{ Value="Debit", Text="Debit", Selected=true},
                        new SelectListItem{ Value="Credit", Text="Credit"}
                    }, "Select Dr./Cr.", new { @class = "form-select select2 mb-4" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Amount&nbsp;<span class="text-danger">*</span> </label>
                    @Html.TextBoxFor(m => m.j_amt, new { @class = "form-control text-end", @placeholder = "0.00", @oninput = "validate(this,1000000)" })
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-2 align-self-center" id="j_add">
                <button type="submit" class="btn btn-info mt-4" id="btnAddEntry"><i class="fe fe-plus"></i>Add Entry</button>
                <button type="button" class="btn btn-outline-dark mt-4" id="btn_Reset">Reset</button>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <span class="text-danger" id="error_msg"></span>
            </div>
        </div>
    </form>

    <div class="card mt-2" id="listEntries">
        <div class="card-body p-0">
            <div class="table-responsive" style="min-height: unset;">
                <table id="tbl_list_entries" class="table table-striped table-bordered" style="width: 100%">
                    <thead>
                        <tr style="color: #fff !important; background-color: #3C457D; border-color: #3C457D;">
                            <th class="border-bottom-0 font-weight-semibold text-white text-center">Sl. No.</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Account</th>
                            <th class="border-bottom-0 font-weight-semibold text-white text-wrap">Description</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Debit</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Credit</th>
                            <th class="border-bottom-0 font-weight-semibold text-white"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                            <th class="text-end fs-14 font-weight-semibold"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <input type="hidden" id="total_debit" value="0" />
            <input type="hidden" id="total_credit" value="0" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-sm-12 col-md-12 col-lg-12 mt-2 mb-2 d-flex justify-content-center" id="errorCreateJL"></div>
        <div class="col-sm-12 col-md-12 col-lg-12 text-center">
            <div class="btn-list btn-animation">
                <button type="submit" class="btn btn-success" id="btn_Insert_Journal">Post Journal</button>
                <button type="button" class="btn btn-outline-danger me-1" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var entry_arr = [];

    //#region Page Load
    $(function () {

        $("#j_branch").select2({
            placeholder: 'Select Branch',
            width: '100%',
            minimumResultsForSearch: '',
            maximumInputLength: 10,
            dropdownParent: $('#form_AddJournal'),
            escapeMarkup: function (markup) {
                return markup;
            }
        });

        $("#j_acc_period").select2({
            placeholder: 'Select Account Period',
            width: '100%',
            minimumResultsForSearch: '',
            maximumInputLength: 10,
            dropdownParent: $('#form_AddJournal'),
            escapeMarkup: function (markup) {
                return markup;
            }
        });

        $("#j_type").select2({
            placeholder: 'Select Entry Type',
            width: '100%',
            minimumResultsForSearch: -1,
            maximumInputLength: 10,
            dropdownParent: $('#form_AddJournal'),
            escapeMarkup: function (markup) {
                return markup;
            }
        });

        $("#j_ttype").select2({
            placeholder: 'Select Dr./Cr.',
            width: '100%',
            minimumResultsForSearch: -1,
            maximumInputLength: 10,
            dropdownParent: $('#form_AddJournal'),
            escapeMarkup: function (markup) {
                return markup;
            }
        });

        var selectedValue = $('#j_acc_period option:eq(1)').val();
        var selectedText = $('#j_acc_period option:eq(1)').text();
        $('#j_acc_period').val(selectedValue).trigger('change');

        var select2SelectEvent = jQuery.Event("select2:select", {
            params: {
                data: {
                    id: selectedValue,
                    text: selectedText
                }
            }
        });

        $('#j_acc_period').trigger(select2SelectEvent);

        $('#j_supplier').select2({
            dropdownParent: $('#form_AddJournal'),
            placeholder: 'Select Supplier',
            width: '100%'
        });

        $("#purchase_payment").addClass("d-none");

        $("#j_add").addClass("d-none");

        $("#btn_Insert_Journal").addClass("d-none");

        $('#j_branch').trigger("select2:select");

        validation();

        validation_entries();

        $('#form_AddJournal input, select').on('focusout', function () {
            var formIsValid = $("#form_AddJournal").valid();

            $("#j_add").toggleClass("d-none", !formIsValid);
        });

        BindEntryDataTable(null);
    });
    //#endregion

    //#region Main Form Validations
    var validation = function () {
        $("#form_AddJournal").validate({
            focusInvalid: true,
            rules:
            {
                j_branch: {
                    required: true,
                },
                j_acc_period: {
                    required: true
                },
                j_date: {
                    required: true,
                },
                j_type: {
                    required: true
                },
                j_refno: {
                    required: true,
                }
            },
            messages: {
                j_branch: {
                    required: "Select Branch",
                },
                j_acc_period: {
                    required: "Select Account Period",
                },
                j_date: {
                    required: "Select Entry Date"
                },
                j_type: {
                    required: "Select Entry Type",
                },
                j_refno: {
                    required: "Generate Referrence No.",
                }
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
                Error_Timeout(elem.attr("id"));
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });

        $('#j_branch').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_acc_period').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_date').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_type').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_refno').on('change', function () {
            $(this).trigger('blur');
        });
    }
    //#endregion

    //#region Entry Form Validations
    var validation_entries = function () {
        $("#form_JournalEntries").validate({
            focusInvalid: true,
            rules:
            {
                j_account: {
                    required: true,
                },
                j_ttype: {
                    required: true
                },
                j_amt: {
                    required: true,
                    minlength: 1,
                    min: 1,
                    max: 1000000
                }
            },
            messages: {
                j_account: {
                    required: "Select Account",
                },
                j_ttype: {
                    required: "Select Dr./Cr.",
                },
                j_amt: {
                    required: "Enter Amount",
                    minlength: "Enter Atleast 0",
                    min: "Min. Value is 1",
                    max: "Max. Value is 1000000"
                }
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
                Error_Timeout(elem.attr("id"));
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });

        $('#j_account').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_ttype').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_amt').on('change', function () {
            $(this).trigger('blur');
        });

        $('#j_amt').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g))
                return false;

            //if (!/^\d*\.?\d{0,2}$/.test(inputValue) || inputValue.split('.').length > 2) {
            //    return false;
            //}
        });
    }
    //#endregion

    //#region Load & Select Events
    $('#j_branch').on('select2:select', function () {
        load_ref_no();

        load_suppliers_create();
        $('#j_account').val("");
        load_accounts_create();
    });

    $('#j_acc_period').on('select2:select', function (e) {
        var inputString = e.params.data.text;

        var datePattern = /\[(\d{2}\/[a-zA-Z]+\/\d{4}) - (\d{2}\/[a-zA-Z]+\/\d{4})\]/;

        var matches = inputString.match(datePattern);        
        if (matches && matches.length === 3) {
            var startDate = matches[1];
            var endDate = matches[2];            
            startDate = moment(startDate, 'DD/MMM/YYYY');
            endDate = moment(endDate, 'DD/MMM/YYYY');
            console.log(startDate);
            console.log(endDate);
            $('#j_date').bootstrapdatepicker('destroy');

            $('#j_date').bootstrapdatepicker({
                format: "dd-MM-yyyy",
                viewMode: "date",
                todayHighlight: true,
                autoclose: true,
                multidate: false,
                multidateSeparator: "-",
                startDate: new Date(startDate),
                endDate: new Date(endDate)
            });

            $("#j_date").bootstrapdatepicker("setDate", "today");

            $('#j_date').keypress(function (e) {
                var charCode = (e.which) ? e.which : e.keyCode
                if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
                    return false;
                }
                else {
                    if (e.target.value.length >= 18)
                        return false;
                }
            });

            $('#j_inv_date').bootstrapdatepicker('destroy');

            $('#j_inv_date').bootstrapdatepicker({
                format: "dd-MM-yyyy",
                viewMode: "date",
                todayHighlight: true,
                autoclose: true,
                multidate: false,
                multidateSeparator: "-",
                startDate: new Date(startDate),
                endDate: new Date(endDate)
            });

            $("#j_inv_date").bootstrapdatepicker("setDate", "");

            $('#j_inv_date').keypress(function (e) {
                var charCode = (e.which) ? e.which : e.keyCode
                if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
                    return false;
                }
                else {
                    if (e.target.value.length >= 18)
                        return false;
                }
            });
        }
        else {
            console.log("Invalid A/C Period Date");
        }

        load_ref_no();

        load_accounts_create();
    });

    $('#j_type').on('select2:select', function () {
        load_ref_no();

        //check_change();
    });

    var load_suppliers_create = function () {
        $.ajax({
            url: '@Url.Action("GetSupplierByBranches", "PurchaseOrders", new { area = "MaterialManagement" })?branchId=' + $('#j_branch').val(),
            type: "GET",
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                $('#j_supplier').empty();

                if (response.length > 0) {
                    $.each(response, function (j) {
                        var newOption = new Option(response[j].Text, response[j].Value, true, true);
                        $('#j_supplier').append(newOption).trigger('change');
                    });

                    $('#j_supplier').val(null).trigger('change');
                }
            },
            error: function (xhr) {
                console.log(xhr);
            }
        });
    }

    var load_accounts_create = function () {
        if ($('#j_branch').val() != "" && $('#j_acc_period').val() != "") {
            $('#j_account').select2({
                placeholder: 'Search Account',
                dropdownParent: $('#form_JournalEntries'),
                width: '100%',
                allowClear: true,
                minimumInputLength: 3,
                maximumInputLength: 12,
                escapeMarkup: function (markup) {
                    return markup;
                },
                ajax: {
                    url: '@Url.Action("GetAccountsDropdown", "ChartOfAccounts", new { area = "Accounts" })',
                    dataType: 'json',
                    delay: 250,
                    data: function (query) {
                        return {
                            query: query.term,
                            branches: $('#j_branch').val(),
                            period: $('#j_acc_period').val()
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data
                        };
                    },
                    cache: true
                }
            });
        }
    }

    // If Branch/Type Change Delete All Items
    var check_change = function (type, id) {

        if (entry_arr.length > 0) {
            Swal.fire({
                title: 'Do you wish to change the ' + type +' ?',
                text: 'This action will delete any entr(y/ies) which are added in the list!',
                icon: 'question',
                showDenyButton: true,
                confirmButtonText: 'Confirm',
                confirmButtonClass: 'btn btn-success mt-2',
                denyButtonText: `Decline`,
                denyButtonClass: 'btn btn-danger ms-2 mt-2',
                buttonsStyling: !1
            }).then((result) => {
                if (result.isDenied) {
                    if (type == "branch") {
                        $('#j_branch').select2('close');
                        $('#j_branch').val(id).trigger('change');
                    }
                    else {
                        $('#j_type').select2('close');
                        $('#j_type').val(id).trigger('change');
                    }
                }
                else {
                    clearDataTable();
                }
            });
        }
    }
    //#endregion

    //#region On Branch Selecting Event
    $('#j_branch').on('select2:selecting', function (e) {
        let branchId = $('#j_branch').val();
        if (JournalItems()) {
            Swal.fire({
                title: 'Do you wish to change the branch?',
                text: 'This action will delete any item(s) which are added below.!',
                icon: 'question',
                showDenyButton: true,
                confirmButtonText: 'Change',
                confirmButtonClass: 'btn btn-success mt-2',
                denyButtonText: `Don't Change`,
                denyButtonClass: 'btn btn-danger ms-2 mt-2',
                buttonsStyling: !1
            }).then((result) => {
                if (result.isDenied) {
                    e.preventDefault();
                    $('#j_branch').select2('close');
                    $('#j_branch').val(branchId).trigger('change')
                }
                else {
                    entry_arr = [];
                    getEntryItems(entry_arr);
                    $("#j_add").addClass("d-none");
                    $("#btn_Insert_Journal").addClass("d-none");
                    $('#j_type').val('').trigger('change');
                    load_ref_no();
                    $("#purchase_payment").addClass("d-none");
                }
            });
        }
    });
    //#endregion

    //#region Checking Journal Entries Table Has Record
    var JournalItems = function () {
        var count = 0;
        if ($("#tbl_list_entries > tbody > tr").length <= 0) {
            count++;
        }
        else {
            var td_text = "";
            $("#tbl_list_entries tbody tr").each(function () {
                var row = $(this);
                td_text = row.find("td").eq(0).html();
            });
            if (td_text.trim() === "No data available in table") {
                count++;
            }
        }
        if (count > 0)
            return false;
        else
            return true;
    }
    //#endregion

    //#region Load Journal Referrence No.
    var load_ref_no = function () {

        if ($("#j_branch").val() != "" && $("#j_acc_period").val() != "" && $('#j_type').val() != "") {

            var _data = {
                "j_branch": $('#j_branch').val(),
                "j_acc_period": $('#j_acc_period').val(),
                "j_type": $('#j_type').val()
            }

            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetReferrenceNo", "Journals", new { area = "Accounts" })',
                dataType: 'json',
                data: _data,
                success: function (response) {
                    $("#j_refno").val("");

                    $("#j_refno").val(response.j_code).trigger("change");
                },
                error: function (xhr) {
                    console.log("Failed! Error Message : " + xhr.statusText);
                }
            }).done(function () {
                if ($('#j_type').val() == "Purchase" || $('#j_type').val() == "Payment") {
                    $("#purchase_payment").removeClass("d-none");
                }
                else {
                    $("#purchase_payment").addClass("d-none");
                }
            });
        }
        else {
            $('#j_refno').val("").trigger("change");
        }
    }
    //#endregion

    //#region Validate Max value for Controls
    var validate = function (e, max) {
        var t = e.value;
        var j = (t.indexOf(".") >= 0) ? (t.substr(0, t.indexOf(".")) + t.substr(t.indexOf("."), 3)) : t;
        e.value = (max == 0) ? j : ((j >= max) ? max : j);
    }
