                "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                }
                console.log(_dataInsert);
            $.ajax({
            type: "POST",
            url: "@Url.Action("InsertNGI", "ReimbursementForms", new { area = "EMRForms" })",
            dataType: 'JSON',
            data: _dataInsert,
            success: function (data) {
                $('#btn_Insert_NGI').removeClass("btn btn-success btn-loaders btn-icon");
                $('#btn_Insert_NGI').addClass("btn btn-success");
                $('#btn_Insert_NGI').html("Add");

                if (data.isSuccess) {
