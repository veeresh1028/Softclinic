<script type="text/javascript">
    //#region Page Load
        var formName1 = $(form_NGIDecision).closest('form').attr('name');
        $(function () {
            validate();
            set_date();
            Get_EMRINFO();
        });
    //#endregion Page Load

    //#region Load set Date
        var set_date = function () {
            $('#ng_3,#ng_4').bootstrapdatepicker({
                format: "dd-MM-yyyy",
                viewMode: "date",
                todayHighlight: true,
                autoclose: true,
                multidate: false,
                multidateSeparator: "-"
            });
            $("#ng_3,#ng_4").bootstrapdatepicker("setDate", '');
        }
    //#endregion

    //#region Validation Initialization
        var validate = function () {
            $('#ng_3').keypress(function (e) {
                var charCode = (e.which) ? e.which : e.keyCode
                if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
                    return false;

                }
                else {
                    if (e.target.value.length >= 18)
                        return false;
                }
            });
            $('#ng_4').keypress(function (e) {
                var charCode = (e.which) ? e.which : e.keyCode
                if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
                    return false;

                }
                else {
                    if (e.target.value.length >= 18)
                        return false;
                }
            });
        }
    //#endregion

    //#region Load Get Diagnosis,treatments,history,invoice
        var Get_EMRINFO = function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetEmrInfo", "ReimbursementForms", new { area = "EMRForms" })?appId=" + "@emr.appId" + "&patId=" + @emr.patId,
                success: function (response) {
                    if (response.length > 0) {
                        $('#inv_net').text(response[0].inv_net);
                        $('#past').text(response[0].past);
                        $('#pt_tr_code').text(response[0].pt_tr_code);
                        $('#pt_tr_name').text(response[0].pt_tr_name);
                        $('#diag_names').text(response[0].diag_names);
                        $('#diag_codes').text(response[0].diag_codes);
                        $('#complaints').text(response[0].complaints);
                        $('#lab_treatments').text(response[0].lab_treatments);
                        $('#rad_treatments').text(response[0].rad_treatments);
                    }
                },
