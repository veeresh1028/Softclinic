            $('#vital_add').hide();
            var x = $("#vital_edit");
            x.load("@Url.Action("EditVitalSigns", "VitalSigns", new { area = "NurseStation" })?signId=" + signId + "&appId=" + @emr.appId, function () {
            $("#vital_edit").show();
            });

            //hide the Copy Data
            var dt = $('#tbl_Prevital').DataTable();
            dt.columns([18]).visible(false);
        }
