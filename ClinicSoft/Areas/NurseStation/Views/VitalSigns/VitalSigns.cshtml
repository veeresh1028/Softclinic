                    if (response.isAuthorized != false) {
                        var table;
                        if ($.fn.dataTable.isDataTable('#tbl_Prevital')) {
                            table = $('#tbl_Prevital').DataTable();
                            table.clear();
                            table.rows.add(response).draw();
                        }
