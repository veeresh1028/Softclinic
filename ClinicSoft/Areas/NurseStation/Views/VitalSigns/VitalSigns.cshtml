            $('#allergy_edit').hide();
            var x = $("#vital_add");
            x.load("@Url.Action("CreateVitalSigns", "VitalSigns", new { area = "NurseStation" })?signId=" + signId, function () {
                $("#vital_add").show();
            });
        }
    //#endregion Add VitalSigns
