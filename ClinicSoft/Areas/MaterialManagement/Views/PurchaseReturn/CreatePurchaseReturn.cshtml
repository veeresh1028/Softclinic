@model BusinessEntities.Accounts.MaterialManagement.PurchaseReturn

<div class="modal-header py-4 px-5">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">Add Purchase Return</h5>
    <button aria-label="Close" data-bs-dismiss="modal" class="btn-close" type="button"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body p-4">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
            <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
        </div>
    </div>

    <form id="form_AddPurchaseReturn" >
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownList("por_branch", (IEnumerable<SelectListItem>)ViewData["BranchList"], "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label class="form-label text-black">Supplier Name&nbsp;<span class="text-danger">*<label id="lbl_message_sup" class="fw-bold"></label></span></label>
                    @Html.DropDownListFor(m => m.por_supplier, new List<SelectListItem>
                       { }, "Select Supplier", new { @class = "form-control select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group">
                    <label class="form-label text-black">Purchase Order&nbsp;<span class="text-danger">*<label id="lbl_message_po" class="fw-bold"></label></span></label>                   
                    @Html.DropDownListFor(m => m.por_purId, new List<SelectListItem>
                      { }, "Select Purchase Order", new { @class = "form-control select2" })
                </div>
            </div>            
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group">
                    <label class="form-label text-black">Date&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(sup => sup.por_odate, new { @class = "form-control", @placeholder = "DD-MMMM-YYYY", maxlength = "18" })
                </div>
            </div>
        </div>
        <div id="divItems" class="d-none">
            <div class="row" style="border: 1px solid #0e2672; border-width: 1px 0 1px 0px;">
                <div class="mt-5">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="form-label text-black">
                                        Items&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_message" class="fw-bold"></label></span>
                                        &nbsp;<a id="btnItemEnquiry" title="Central Store Item Enquiry" style="cursor: pointer"><i class="fa fa-question-circle text-info"></i></a>
                                    </label>
                                    <select class="form-control select2" id="item_name">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2">
                                <div class="form-group">
                                    <label class="form-label text-black">Type</label>
                                    <input type="text" id="item_type" class="form-control" readonly="readonly" value="" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <label class="form-label text-black">Items Description</label>
                                    <input type="text" id="item_desc" class="form-control" maxlength="495" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2">
                                <div class="form-group">
                                    <label class="form-label">Qty / UoM&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_qty" class="fw-bold"></label></span></label>
                                    <div class="input-group">
                                        <input type="text" id="item_qty" class="form-control" maxlength="8" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                        <div class="input-group-append" style="max-width: 70%; min-width: 50%;">
                                            <select class="form-control select2" id="item_uom"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-1 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label text-black">Cost</label>
                                    <input type="text" id="item_cost" class="form-control" maxlength="7" readonly="readonly" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-1 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label text-black">Total</label>
                                    <input type="text" id="item_total" class="form-control" readonly="readonly" value="0" />
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-6 col-lg-2">
                                <div class="form-group">
                                    <label class="form-label text-danger">&nbsp;<span class="text-danger" id="lbl_calculation_error"></span></label>
                                    <button type="button" class="btn btn-secondary" id="btnAddItem" onclick="addItemToList();"> <i class="mdi mdi-plus"></i>&nbsp;Add Item</button>
                                    
                                    <button type="button" class="btn btn-outline-dark" id="btn_Reset">Reset</button>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12 d-flex justify-content-center" id="exists">
                                <div id="ExistAlert"></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="table-responsive">
                                <table id="tbl_purchasereturn_items" class="table table-striped table-bordered text-nowrap resize-table" style="width: 100%; cursor: pointer;">
                                    <thead>
                                        <tr style="color: #fff !important; background-color: #3C457D; border-color: #3C457D; ">
                                            <th class="border-bottom-0 font-weight-semibold text-white">ID</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Item</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Description</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Batch No.</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Expiry Date</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Qty</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">UoM</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Cost Price</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Total</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white"></th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">pirId</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">itemId</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">ibId</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">ib_qty</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">ib_uom</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">pir_dcode</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">pire_purchase</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>                                            
                                            
                                            <td class="text-end fs-14 font-weight-semibold" style="text-align: right !important;"><span class="text-right text-dark fw-bold">Total : &nbsp;</span></td>
                                            <td class="text-end fs-14 font-weight-semibold"><span id="subPrice" class="d-none"></span></td>
                                            <td class="text-end fs-14 font-weight-semibold"><span id="subTotal" class="d-none"></span></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td class="text-end fs-14 font-weight-semibold" colspan="7"></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 col-lg-3 mt-3">
                <div class="form-group">
                    @*<label class="form-label text-black">Notes</label>*@
                    @Html.TextAreaFor(sup => sup.por_notes, new { @class = "form-control", maxlength = "998", @placeholder = "Enter Notes", @rows = "3" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                    <div id="create_pr_error" class="text-center" style="max-width:500px"></div>
                </div>
                <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                    <div id="ReturnInsertAlert"></div>
                </div>
                @if (TempData["ErrorMessage_Insert"] != null)
                {
                    <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <strong>Error!&nbsp;</strong>@TempData["ErrorMessage_Insert"]
                        </div>
                    </div>
                }
                <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                    <button type="submit" class="btn btn-success" id="btn_Insert"><i class="fe fe-check-circle"></i>Return Purchase</button>
                    <button type="button" class="btn btn-outline-primary" id="btnPrintPor"><i class="fe fe-printer"></i> Print Purchase Return</button>
                    <button type="button" class="btn btn-outline-danger me-1" data-bs-dismiss="modal">
                        <i class="fe fe-x"></i> Close
                    </button>
                    <label class="text-red" id="error_message"></label>
                    <input type="hidden" id="hi_ib_qty" value="0" />
                    <input type="hidden" id="hi_pirId" value="0" />
                    <input type="hidden" id="hi_ibId" value="0" />
                    <input type="hidden" id="hi_ib_batch" value="" />
                    <input type="hidden" id="hi_itemId" value="0" />
                    <input type="hidden" id="hi_pire_purchase" value="0" />
                    <input type="hidden" id="hi_item_name" value="" />
                    <input type="hidden" id="hi_item_code" value="" />
                    <input type="hidden" id="hi_pir_dcode" value="" />
                    <input type="hidden" id="hi_ib_edate" value="" />
                    <input type="hidden" id="hi_prId" value="" />
                    <input type="hidden" id="hi_porId" value="0" />
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    var por_item_arr = [];

    //#region Page Load
    $(function () {
        $('#por_branch').select2({
            minimumResultsForSearch: '',
            dropdownParent: $('#purchaseReturn_body'),
            width: '100%'
        });
        $('#por_purId').select2({
            dropdownParent: $('#purchaseReturn_body'),
            placeholder: 'Select Purchase Order',
            width: '100%'
        });
        $('#por_supplier').select2({
            dropdownParent: $('#purchaseReturn_body'),
            placeholder: 'Select Supplier',
            width: '100%'
        });
        $('#item_uom').select2({
            dropdownParent: $('#purchaseReturn_body'),
            placeholder: 'Select UoM',
            width: '100%'
        });
        $('#por_odate').bootstrapdatepicker({
            format: "dd-MM-yyyy",
            viewMode: "date",
            todayHighlight: true,
            autoclose: true,
            multidate: false,
            multidateSeparator: "-"
        });
        $("#por_odate").bootstrapdatepicker("setDate", "today");
        $("#btnPrintPor").hide();

        $("#item_name").select2({
            placeholder: 'Select a Item',
            width: '100%',
            dropdownParent: $('#purchaseReturn_body'),
            minimumInputLength: 3,
            escapeMarkup: function (markup) {
                return markup;
            },
            ajax: {
                url: '@Url.Action("SearchItems", "PurchaseReturn", new { area = "MaterialManagement" })',
                dataType: 'json',
                delay: 250,
                data: function (query) {
                    $('#lbl_message').text('');
                    if ($('#por_purId').val().trim() != "") {
                        return {
                            query: query.term,
                            branch: $('#por_branch').val(),
                            pr_code: $('#por_purId').val()
                        };
                    }
                    else {
                        $('#lbl_message').text('Select PO First');
                        return {
                            query: '',
                            branch: 0,
                            pr_code : ''
                        }
                    }
                },
                processResults: function (data) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });
        $("#create_pr_error").html('');
        BindDataTable(null);

        validation();
    });
    //#endregion

    //#region load Suppliers with Pending GRN on Branch Change
    $('#por_branch').on('select2:select', function (e) {
        $('#por_purId').empty();
        $('#por_supplier').empty();
        por_item_arr = [];
        GetReturnItems(por_item_arr);
        if (!$('#divItems').hasClass('d-none')) {
            $('#divItems').addClass('d-none');
        }
        var dataTable = $("#tbl_grn_create").DataTable();
        BindDataTable(null);

        var branchId = $('#por_branch').val();
        if (branchId.length > 0) {
            $.ajax({
                url: '@Url.Action("GetSupplierByBranches_PurchaseOrder", "PurchaseReturn", new { area = "MaterialManagement" })?branchId=' + branchId,
                type: "GET",
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    if (response.length > 0) {
                        $('#por_supplier').empty();
                        $('#por_supplier').append('<option value="">Select Supplier</option>');
                        $('#por_supplier').val('-1');
                        $('#por_supplier').trigger('change');
                        $.each(response, function (j) {
                            var newOption = new Option(response[j].Text, response[j].Value, (parseInt(response[j].Value) === -1) ? true : false, (parseInt(response[j].Value) === -1) ? true : false);
                            $('#por_supplier').append(newOption).trigger('change');
                        });
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    alert(xhr);
                }
            });
        }
    });

    //#endregion

    //#region Adding Validation on Main Form
    var validation = function () {
        $("#form_AddPurchaseReturn").validate({
            focusInvalid: true,
            rules:
            {
                por_branch: {
                    required: true,
                },
                por_supplier: {
                    required: true,
                },
                por_purId: {
                    required: true,
                },
                por_odate: {
                    required: true,
                },

            },
            messages: {
                por_branch: {
                    required: "Select Branch",
                },
                por_supplier: {
                    required: "Select Supplier",
                },
                por_purId: {
                    required: "Select Purchase Order",
                },
                por_odate: {
                    required: "Select Return Date",
                },
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
                Error_Timeout(elem.attr("id"));
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });
    }
    $('#por_odate').keypress(function (e) {
        var charCode = (e.which) ? e.which : event.keyCode
        if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
            return false;

        }
        else {
            if (e.target.value.length >= 18)
                return false;
        }
    });
    //#endregion

    //#region load Purchase Order Based on Supplier Change
    $('#por_supplier').on('select2:select', function (e) {
        $('#por_purId').empty();
        por_item_arr = [];
        GetReturnItems(por_item_arr);
        var branchId = $('#por_branch').val();
        var supplierId = $('#por_supplier').val();
        if (!$('#divItems').hasClass('d-none')) {
            $('#divItems').addClass('d-none');
        }
        if (branchId.length > 0) {
            $.ajax({
                url: '@Url.Action("GetPurchaseOrder_BySupplier", "PurchaseReturn", new { area = "MaterialManagement" })?branchId=' + branchId + "&supId=" + supplierId,
                type: "GET",
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    if (response.length > 0) {
                        $('#por_purId').empty();
                        $('#por_purId').append('<option value="">Select Purchase Order</option>');
                        $('#por_purId').val('-1');
                        $('#por_purId').trigger('change');
                        $.each(response, function (j) {
                            var newOption = new Option(response[j].Text, response[j].Value, (parseInt(response[j].Value) === -1) ? true : false, (parseInt(response[j].Value) === -1) ? true : false);
                            $('#por_purId').append(newOption).trigger('change');
                        });
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    if (!$('#divItems').hasClass('d-none')) {
                        $('#divItems').addClass('d-none');
                    }
                }
            });
        }
    });
    //#endregion

    //#region Purchase Order Select Event
    $('#por_purId').on('select2:select', function (e) {
        por_item_arr = [];
        GetReturnItems(por_item_arr);
        if ($('#por_purId') != null && $('#por_purId') != undefined && $('#por_purId') != "" && $('#por_purId').length > 0) {
            $('#divItems').removeClass("d-none");
        }
        else {
            if (!$('#divItems').hasClass('d-none')) {
                $('#divItems').addClass('d-none');
            }
        }
        resizedt('tbl_purchasereturn_items');
    });
    //#endregion

    //#region Validate Text Box with One Decimal and numeric only on Key Press
    function validateOneDecimalNumeric(el, evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        var number = el.value.split('.');
        if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        //just one dot
        if (number.length > 1 && charCode == 46) {
            return false;
        }
        //get the Current position
        var caratPos = getSelectionStart(el);
        var dotPos = el.value.indexOf(".");
        if (caratPos > dotPos && dotPos > -1 && (number[1].length > 1)) {
            return false;
        }
        return true;
    }
    function getSelectionStart(o) {
        if (o.createTextRange) {
            var r = document.selection.createRange().duplicate()
            r.moveEnd('character', o.value.length)
            if (r.text == '') return o.value.length
            return o.value.lastIndexOf(r.text)
        } else return o.selectionStart
    }
    //#endregion

    //#region Item Select Event
    $('#item_name').on('select2:select', function (e) {
        var data = e.params.data;
        if (data.id > 0) {
            $.ajax({
                url: '@Url.Action("GetReturnItemDetail", "PurchaseReturn", new { area = "MaterialManagement" })?id=' + data.id,
                type: "GET",
                dataType: "json",
                async: false,
                success: function (response) {
                    $("#hi_ib_qty").val(0);
                    $("#item_uom").empty();
                    if (response.length > 0) {
                        $('#item_qty').val(parseFloat(response[0].ib_qty).toFixed(2));

                        //Initializing UOM Based on GRN Items
                        var item_uom = response[0].ib_uom;
                        var item_uom2 = response[0].ib_uom2;
                        var item_uom3 = response[0].ib_uom3;
                        var newOption = "";
                        newOption = new Option(item_uom, item_uom, true, true);
                        $("#item_uom").append(newOption).trigger('change');
                        if (item_uom != item_uom2) {
                            newOption = new Option(item_uom2, item_uom2, true, true);
                            $("#item_uom").append(newOption).trigger('change');
                        }
                        if (item_uom2 != item_uom3) {
                            newOption = new Option(item_uom3, item_uom3, true, true);
                            $("#item_uom").append(newOption).trigger('change');
                        }
                        $('#item_uom').val(response[0].ib_uom).trigger('change');

                        //Setting hidden value for calculation and validation
                        $('#hi_pirId').val(response[0].pirId);
                        $('#hi_ib_qty').val(response[0].ib_qty);
                        $('#hi_item_name').val(response[0].item_name);
                        $('#hi_item_code').val(response[0].item_code);
                        $('#hi_ibId').val(response[0].ibId);
                        $('#hi_ib_batch').val(response[0].ib_batch);
                        $('#hi_pir_dcode').val(response[0].pir_dcode);
                        $('#hi_ib_edate').val(response[0].ib_edate);
                        $('#hi_pire_purchase').val(response[0].pir_purchase);
                        $('#item_type').val(response[0].ib_batch_type);
                        $('#hi_itemId').val(response[0].itemId);
                        $('#hi_prId').val(response[0].prId);
                        if (response[0].ib_batch_type != "Free GRN") {
                            $('#item_cost').val(parseFloat(response[0].pir_uprice).toFixed(2));
                        }
                        else {
                            $('#item_cost').val(0);
                        }

                        //Setting New Start Date For GRN Return Date
                        var _date = moment(response[0].pir_ddate, 'MM/DD/YYYY');
                        $("#por_odate").bootstrapdatepicker("setDate", "today");
                        $('#por_odate').bootstrapdatepicker('destroy');
                        $('#por_odate').bootstrapdatepicker({
                            format: "dd-MM-yyyy",
                            viewMode: "date",
                            todayHighlight: true,
                            autoclose: true,
                            multidate: false,
                            multidateSeparator: "-",
                            startDate: new Date(_date)
                        });
                    }
                    else {
                        $('#item_qty').val("0");
                        $('#item_cost').val("0");
                        $('#item_uom').val("").trigger('change');
                    }
                    AddingCalculation();
                },
                error: function (xhr) {
                    console.log(xhr);
                    alert(xhr.statusText);
                }
            }).done(function () {
                //$('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                setTimeout(function () {
                    $('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                }, 100);
            });
        }
    });
    //#endregion Patient Select Event

    //#region Adding Item Calculation
    $("#item_qty").focusout('input', function () {
        AddingCalculation();
    });
    var AddingCalculation = function () {
        $("#lbl_calculation_error").text("");
        $("#lbl_qty").text("");
        let _qty = $("#item_qty").val();
        let _price = $("#item_cost").val();
        let _type = $("#item_type").val();
        let _total_qty = $("#hi_ib_qty").val();
        let totalAmount = 0;
        if (_qty === "" || _qty === null || _qty === undefined) {
            _qty = 0;
            $("#item_qty").val("0");
        }
        if (_price === "" || _price === null || _price === undefined) {
            _price = 0;
            $("#item_cost").val("0");
        }
        totalAmount = _qty * _price;
        $("#item_total").val(parseFloat(totalAmount).toFixed(2));

        if (_type != "Free GRN") {
