<!-- Row-->
<div class="row" id="printDiv">
    <div class="col-md-12">
        <div class="card overflow-hidden">
            <div class="card-body">
                <div class="text-center">
                    <img src="@Model.purchaseInvoice.set_header_image" />
                </div>

                <h2 class="font-weight-bold text-primary">Purchase Invoice</h2>
                <div class="row fw-bold">
                    <div class="col-sm-12 col-md-5 col-lg-5">
                        <div class="expanel expanel-default">
                            <div class="expanel-heading">
                                <h3 class="expanel-title">Invoice Detail</h3>
                            </div>
                            <div class="expanel-body">
                                <div class="row">
                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <strong>Code</strong>
                                    </div>
                                    <div class="col-sm-6 col-md-1 col-lg-1">
                                        <strong>:</strong>
                                    </div>
                                    <div class="col-sm-12 col-md-8 col-lg-8">
                                        @Model.purchaseInvoice.pinv_icode
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <strong>Date</strong>
                                    </div>
                                    <div class="col-sm-6 col-md-1 col-lg-1">
                                        <strong>:</strong>
                                    </div>
                                    <div class="col-sm-12 col-md-8 col-lg-8">
                                        @Model.purchaseInvoice.pinv_idate
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <strong>PO Code</strong>
                                    </div>
                                    <div class="col-sm-6 col-md-1 col-lg-1">
                                        <strong>:</strong>
                                    </div>
                                    <div class="col-sm-12 col-md-8 col-lg-8">
                                        @Model.purchaseInvoice.pinv_pocode
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <strong>Supplier Name</strong>
                                    </div>
                                    <div class="col-sm-6 col-md-1 col-lg-1">
                                        <strong>:</strong>
                                    </div>
                                    <div class="col-sm-12 col-md-8 col-lg-8">
                                        @Model.purchaseInvoice.supplier_name
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <strong>Supplier GRN</strong>
                                    </div>
                                    <div class="col-sm-6 col-md-1 col-lg-1">
                                        <strong>:</strong>
                                    </div>
                                    <div class="col-sm-12 col-md-8 col-lg-8">
                                        @Model.purchaseInvoice.pinv_invno
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="dropdown-divider"></div>

                <div class="dropdown-divider"></div>
                <div class="table-responsive push">
                    <table class="table table-bordered table-hover text-nowrap">
                        <tr class=" ">
                            <th class="text-center " style="width: 1%"></th>
                            <th class="text-wrap">GRN Code</th>
                            <th class="text-wrap">Description</th>
                            <th class="text-end" style="width: 1%">Total</th>
                            <th class="text-end" style="width: 1%">Discount</th>
                            <th class="text-end" style="width: 1%">NET</th>
                            <th class="text-end" style="width: 1%">VAT</th>
                            <th class="text-end" style="width: 1%">Net+VAT</th>
                        </tr>
                        @{int count = 0; }
                        @foreach (BusinessEntities.Accounts.MaterialManagement.PurchaseInvoiceItems i in Model.purchaseInvoiceItems)
                        {
                            count++;

                            <tr>
                                <td class="text-center">@count.ToString("D2")</td>
                                <td>@i.pr_code  </td>
                                <td>@i.pit_notes </td>
                                <td class="text-end">@i.pit_total.ToString("N2") </td>
                                <td class="text-end">@i.pit_disc_val.ToString("N2") </td>
                                <td class="text-end">@i.pit_net.ToString("N2") </td>
                                <td class="text-end">@i.pit_vat.ToString("N2") </td>
                                <td class="text-end">@i.pit_net_vat.ToString("N2") </td>
                            </tr>

                        }
                        <tr>
                            <td colspan="6" class="font-weight-semibold">Amount In Words : @Model.purchaseInvoice.amount_in_words /-</td>

                            <td class="font-weight-semibold text-end">Total (in AED)</td>
                            <td class="text-end">@Model.purchaseInvoice.pinv_total.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td rowspan="4" colspan="6" class="font-weight-semibold">@Model.purchaseInvoice.pinv_notes</td>
                            <td class="font-weight-semibold text-end">Discount (in AED)</td>
                            <td class="text-end">@Model.purchaseInvoice.pinv_disc_value.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold text-end">Net Amount (in AED)</td>
                            <td class="text-end">@Model.purchaseInvoice.pinv_net.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold text-end">VAT (in AED)</td>
                            <td class="text-end">@Model.purchaseInvoice.pinv_vat.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold text-end">Net + VAT </td>
                            <td class="text-end">@Model.purchaseInvoice.pinv_netvat.ToString("N2")</td>
                        </tr>
                    </table>
                </div>


                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6 ">
                        <label class="fs-15 fw-bold">Prepared by</label><br />
                        <label class="fw-bold">@Model.purchaseInvoice.madeby</label>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <label class="pull-right fs-15 fw-bold">Approved by</label>
                    </div>

                </div>

                <div class="text-center">
                    <img src="@Model.purchaseInvoice.set_footer_image" />
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //#region Page Load & Initialization
    $(function () {
        var elem = 'printDiv';
        var header_str = '<html><head><title>' + document.title + '</title></head><body>';
        var footer_str = '</body></html>';
        var new_str = document.getElementById(elem).innerHTML;
        var old_str = document.body.innerHTML;
        document.body.innerHTML = header_str + new_str + footer_str;
        window.print();
        document.body.innerHTML = old_str;
        return false;
    });
    //#endregion Page Load & Initialization
</script>





