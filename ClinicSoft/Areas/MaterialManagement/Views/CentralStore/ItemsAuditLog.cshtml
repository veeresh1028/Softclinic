                        <th class="border-bottom-0 font-weight-semibold text-white">Qty3</th>
                        <th class="border-bottom-0 font-weight-semibold text-white">UOM3</th>
                        <th class="border-bottom-0 font-weight-semibold text-white">M.Factor 2</th>
                        <th class="border-bottom-0 font-weight-semibold text-white">Cost Price3</th>
                        <th class="border-bottom-0 font-weight-semibold text-white">Sales Price3</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>

    //#region Page Load
    $(function () {
        GetItem();       
        })
    //#endregion

    //#region Load Items
    function GetItem() {
        var itema_code = $('#itema_code').val();
            $.ajax({
                type: "GET",
                url: '@Url.Action("ItemAuditLog_Detail", "CentralStore" , new { area = "MaterialManagement" })?itema_code=' + itema_code,
                beforeSend: function () {
                    $('#progress-loader').show();
                },
                success: function (response) {
                    if (response.isAuthorized != false) {
                        if ($.fn.dataTable.isDataTable('#tbl_items_audit')) {
                            table = $('#tbl_items_audit').DataTable();
                            table.clear();
                            table.rows.add(response).draw();
                        }
                        else {
                            BindDataTable(response);
                        }
                    }
                    $('#progress-loader').hide();
                },
                error: function (xhr) {
                    console.log(xhr);
                    $('#progress-loader').hide();
                }
            });
        }
    //#endregion

    //#region Bind Datatable
    var BindDataTable = function (response) {
        var table = $("#tbl_items_audit").DataTable({
            fixedHeader: {
                header: true,
                footer: true
            },
            processing: true,
            "deferRender": true,
            "retrieve": true,
            lengthChange: true,
            scrollX: true,
            scrollY: 500,
            scrollCollapse: true,
            "aaData": response,
            "aoColumns": [
                {
                    "mData": "itema_code",
                    "orderable": false,
                    "searchable": false
                },
                {
                    "mData": "itema_name",
                    "orderable": false,
                    "searchable": false,
                    "className": "td_max_width"
                },
                {
                    "mData": "itema_type"
                },
                {
                    "mData": "itema_qty",
                    "className": "text-center",
                    "render": $.fn.dataTable.render.number(',', '.', 2)
                },
                {
                    "mData": "itema_uom"
                },
                {
                    "mData": "itema_cost",
                    "className": "text-right",
                    "render": $.fn.dataTable.render.number(',', '.', 2)
                },
                {
                    "mData": "itema_sprice",
                    "className": "text-right",
                    "render": $.fn.dataTable.render.number(',', '.', 2)
                },
                {
                    "mData": "itema_operation"
                },
                {
                    "mData": "madeby"
                },
                {
                    "mData": "itema_date_created"
                },
                {
                    "mData": "itema_desc"
                },
                {
                    "mData": "itema_status"
                },
                {
                    "mData": "itema_brand"
                },
                {
                    "mData": "itema_dosage"
                },
                {
                    "mData": "itema_strength"
                },
                {
                    "mData": "itema_qty_adj"
                },
                {
                    "mData": "itema_qty2"
                },
                {
                    "mData": "itema_uom2"
                },
                {
                    "mData": "itema_m_factor"
                },
                {
                    "mData": "itema_cost2"
                },
                {
                    "mData": "itema_sprice2"
                },
                {
                    "mData": "itema_vat"
                },
                {
                    "mData": "itema_qty3"
                },
                {
                    "mData": "itema_uom3"
                },
                {
                    "mData": "itema_m_factor2"
                },
                {
                    "mData": "itema_cost3"
                },
                {
                    "mData": "itema_sprice3"
                },
            ],
            "aoColumnDefs": [
                {
                    "aTargets": [10],
                    "visible": false,
                },
                {
                    "aTargets": [11],
                    "visible": false,
                },
                {
                    "aTargets": [12],
                    "visible": false,
                },
                {
                    "aTargets": [13],
                    "visible": false,
                },
                {
                    "aTargets": [14],
