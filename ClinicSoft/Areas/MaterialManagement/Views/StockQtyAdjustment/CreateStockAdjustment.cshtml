
@model BusinessEntities.Accounts.MaterialManagement.StockQtyAdjustment

<div class="modal-header py-4 px-5">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">Add Stock Qty Adjustment</h5>
    <button aria-label="Close" data-bs-dismiss="modal" class="btn-close" type="button"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body p-4">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
            <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
        </div>
    </div>

    <form id="form_AddStockQtyAdjustment" >
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownList("iqa_branch", (IEnumerable<SelectListItem>)ViewData["BranchList"], "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label class="form-label text-black">Post A/C&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.iqa_account, new List<SelectListItem>
                      { }, "Select Post A/C", new { @class = "form-control select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group">
                    <label class="form-label text-black">Date&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(sup => sup.iqa_date, new { @class = "form-control", @placeholder = "DD-MMMM-YYYY", maxlength = "18" })
                </div>
            </div>
        </div>
        <div id="divItems">
            <div class="row" style="border: 1px solid #0e2672; border-width: 1px 0 1px 0px;">
                <div class="mt-5">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label class="form-label text-black">
                                        Items&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_message" class="fw-bold"></label></span>  <a id="btnCreateItem" style="cursor: pointer"><i class="fa fa-plus text-success"></i></a>
                                        &nbsp;<a id="btnItemEnquiry" title="Central Store Item Enquiry" style="cursor: pointer"><i class="fa fa-question-circle text-info"></i></a>
                                    </label>
                                    <select class="form-control select2" id="item_name">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label class="form-label text-black">Batch<span class="text-danger">&nbsp;*</span></label>
                                    <select class="form-control select2" id="item_batch"></select>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2">
                                <div class="form-group">
                                    <label class="form-label text-black">Expiry<span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" id="item_edate" class="form-control" maxlength="18" placeholder="DD-MMMM-YYYY" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label">Qty&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_qty" class="fw-bold"></label></span></label>
                                    <input type="text" id="item_qty" class="form-control" maxlength="8" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label">Qty2&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_qty2" class="fw-bold"></label></span></label>
                                    <input type="text" id="item_qty2" class="form-control" maxlength="8" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label">Qty3&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_qty3" class="fw-bold"></label></span></label>
                                    <input type="text" id="item_qty3" class="form-control" maxlength="8" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label text-black">Cost</label>
                                    <input type="text" id="itemCost" class="form-control" maxlength="7" readonly="readonly" onkeypress="return validateOneDecimalNumeric(this,event);" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-1">
                                <div class="form-group">
                                    <label class="form-label text-black">Total</label>
                                    <input type="text" id="item_total" class="form-control" readonly="readonly" value="0" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label class="form-label text-black">Items Description</label>
                                    <input type="text" id="item_desc" class="form-control" maxlength="495" />
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2">
                                <div class="form-group">
                                    <label class="form-label text-danger">&nbsp;<span class="text-danger" id="lbl_calculation_error"></span></label>
                                    <button type="button" class="btn btn-secondary" id="btnAddItem" onclick="addItemToList();"> <i class="mdi mdi-plus"></i>&nbsp;Add Item</button>

                                    <button type="button" class="btn btn-outline-dark" id="btn_Reset">Reset</button>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12 d-flex justify-content-center" id="exists">
                                <div id="ExistAlert"></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="table-responsive">
                                <table id="tbl_qtyadjust_items" class="table table-striped table-bordered text-nowrap resize-table" style="width: 100%; cursor: pointer;">
                                    <thead>
                                        <tr style="color: #fff !important; background-color: #3C457D; border-color: #3C457D; ">
                                            <th class="border-bottom-0 font-weight-semibold text-white">ID</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Item</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Batch No.</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Expiry Date</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Qty</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">UoM</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Cost Price</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Qty1</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Qty2</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Qty3</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white">Description</th>
                                            <th class="border-bottom-0 font-weight-semibold text-white"></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td class="text-end fs-14 font-weight-semibold" style="text-align: right !important;"><span class="text-right text-dark fw-bold">Total : &nbsp;</span></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td class="text-end fs-14 font-weight-semibold"></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                    <div id="qty_adjust_error" class="text-center" style="max-width:500px"></div>
                </div>
                <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                    <div id="QtyAdjustmentAlert"></div>
                </div>
                @if (TempData["ErrorMessage_Insert"] != null)
                {
                    <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <strong>Error!&nbsp;</strong>@TempData["ErrorMessage_Insert"]
                        </div>
                    </div>
                }
                <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                    <button type="submit" class="btn btn-success d-none" id="btn_InsertQtyAdjustment"><i class="fe fe-check-circle"></i>Confirm & Save</button>
                    <button type="button" class="btn btn-outline-danger me-1" data-bs-dismiss="modal">
                        <i class="fe fe-x"></i> Close
                    </button>
                    <label class="text-red" id="error_message"></label>
                    <input type="hidden" id="hi_ibId" value="0" />
                    <input type="hidden" id="hi_uom" value="0" />
                    <input type="hidden" id="hi_uom2" value="0" />
                    <input type="hidden" id="hi_uom3" value="0" />
                    <input type="hidden" id="hi_mfactor" value="0" />
                    <input type="hidden" id="hi_mfactor2" value="" />
                    <input type="hidden" id="hi_itemId" value="0" />
                    <input type="hidden" id="hi_oldqty" value="0" />
                    <input type="hidden" id="hi_item_name" value="" />
                    <input type="hidden" id="hi_item_code" value="" />
                    <input type="hidden" id="hi_batch" value="" />
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    var adj_item_arr = [];

    //#region Page Load
    $(function () {
        $('#iqa_branch').select2({
            minimumResultsForSearch: '',
            dropdownParent: $('#adjustqty_body'),
            width: '100%'
        });
        $('#iqa_account').select2({
            dropdownParent: $('#adjustqty_body'),
            placeholder: 'Select Account',
            width: '100%'
        });
        $('#item_batch').select2({
            dropdownParent: $('#adjustqty_body'),
            placeholder: 'Select Batch',
            width: '100%'
        });
        $('#iqa_date').bootstrapdatepicker({
            format: "dd-MM-yyyy",
            viewMode: "date",
            todayHighlight: true,
            autoclose: true,
            multidate: false,
            multidateSeparator: "-"
        });
        $('#item_edate').bootstrapdatepicker({
            format: "dd-MM-yyyy",
            viewMode: "date",
            todayHighlight: true,
            autoclose: true,
            multidate: false,
            multidateSeparator: "-"
        });
        $("#iqa_date").bootstrapdatepicker("setDate", "today");

        $("#item_name").select2({
            placeholder: 'Select a Item',
            width: '100%',
            dropdownParent: $('#adjustqty_body'),
            minimumInputLength: 3,
            escapeMarkup: function (markup) {
                return markup;
            },
            ajax: {
                url: '@Url.Action("SearchItems", "StockQtyAdjustment", new { area = "MaterialManagement" })',
                dataType: 'json',
                delay: 250,
                data: function (query) {
                    $('#lbl_message').text('');
                    if ($('#iqa_branch').val().trim() != "") {
                        return {
                            query: query.term,
                            branch: $('#iqa_branch').val()
                        };
                    }
                    else {
                        $('#lbl_message').text('Select Branch First');
                        return {
                            query: '',
                            branch: 0
                        }
                    }
                },
                processResults: function (data) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });
        BindDataTable(null);

        validation();
    });
    //#endregion

    //#region Adding Validation on Main Form
    var validation = function () {
        $("#form_AddStockQtyAdjustment").validate({
            focusInvalid: true,
            rules:
            {
                iqa_branch: {
                    required: true,
                },
                iqa_account: {
                    required: true,
                },
                iqa_date: {
                    required: true,
                },
            },
            messages: {
                iqa_branch: {
                    required: "Select Branch",
                },
                iqa_account: {
                    required: "Select Post Account",
                },
                iqa_date: {
                    required: "Select Date",
                },
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
                Error_Timeout(elem.attr("id"));
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });
    }
    $('#iqa_branch').keypress(function (e) {
        var charCode = (e.which) ? e.which : event.keyCode
        if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
            return false;

        }
        else {
            if (e.target.value.length >= 18)
                return false;
        }
    });
    //#endregion

    //#region load Post Accounts on Branch Change
    $('#iqa_branch').on('select2:select', function (e) {
        $('#iqa_account').empty();
        adj_item_arr = [];
        GetAdjustedItems(adj_item_arr);
        BindDataTable(null);

        var branchId = $('#iqa_branch').val();
        if (branchId.length > 0) {
            $.ajax({
                url: '@Url.Action("GetPostToAccount", "StockQtyAdjustment", new { area = "MaterialManagement" })?branchId=' + branchId,
                type: "GET",
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    if (response.length > 0) {
                        $('#iqa_account').empty();
                        $('#iqa_account').append('<option value="">Select Account</option>');
                        $('#iqa_account').val('-1');
                        $('#iqa_account').trigger('change');
                        $.each(response, function (j) {
                            var newOption = new Option(response[j].text, response[j].id, (parseInt(response[j].id) === -1) ? true : false, (parseInt(response[j].id) === -1) ? true : false);
                            $('#iqa_account').append(newOption).trigger('change');
                        });
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    alert(xhr);
                }
            });
        }
    });

    //#endregion

    //#region Validate Text Box with One Decimal and numeric only on Key Press
    function validateOneDecimalNumeric(el, evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        var number = el.value.split('.');
        if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        //just one dot
        if (number.length > 1 && charCode == 46) {
            return false;
        }
        //get the Current position
        var caratPos = getSelectionStart(el);
        var dotPos = el.value.indexOf(".");
        if (caratPos > dotPos && dotPos > -1 && (number[1].length > 1)) {
            return false;
        }
        return true;
    }
    function getSelectionStart(o) {
        if (o.createTextRange) {
            var r = document.selection.createRange().duplicate()
            r.moveEnd('character', o.value.length)
            if (r.text == '') return o.value.length
            return o.value.lastIndexOf(r.text)
        } else return o.selectionStart
    }
    //#endregion

    //#region Item Select Event
    $('#item_name').on('select2:select', function (e) {
        var data = e.params.data;
        if ((data.id).length > 0) {
            var branchId = $('#iqa_branch').val();

            $.ajax({
                url: '@Url.Action("GetBatchesDetail", "StockQtyAdjustment", new { area = "MaterialManagement" })?Item_code=' + data.id + "&branchId=" + branchId,
                type: "GET",
                dataType: "json",
                async: false,
                success: function (response) {
                    if (response.length > 0) {
                    $('#item_batch').empty();
                    $('#item_batch').append('<option value="">Select Batch</option>');
                    $('#item_batch').val('-1');
                    $('#item_batch').trigger('change');
                        $.each(response, function (j) {
                            var newOption = new Option(response[j].text, response[j].id, (response[j].id === '-1') ? true : false, (response[j].id === '-1') ? true : false);
                        $('#item_batch').append(newOption).trigger('change');
                    });
                    }
                    else {
                        $('#item_batch').empty();
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    alert(xhr.statusText);
                }
            }).done(function () {
                //$('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                setTimeout(function () {
                    $('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                }, 100);
            });
        }
    });
    //#endregion

    //#region Batch Select Event
    $('#item_batch').on('select2:select', function (e) {
        var ibId = $('#item_batch').val();
        if (ibId > 0) {
            $.ajax({
                url: '@Url.Action("AdjustedBatch_Detail", "StockQtyAdjustment", new { area = "MaterialManagement" })?ibId=' + ibId,
                type: "GET",
                dataType: "json",
                async: false,
                success: function (response) {
                    if (response.length > 0) {
                        $('#item_qty').val(parseFloat(response[0].ib_qty).toFixed(2));
                        $('#item_qty2').val(parseFloat(response[0].ib_qty2).toFixed(2));
                        $('#item_qty3').val(parseFloat(response[0].ib_qty3).toFixed(2));
                        $('#itemCost').val(parseFloat(response[0].ib_cost).toFixed(2));
                        var edate = moment(response[0].ib_edate, 'DD/MM/YYYY').format('DD-MMMM-YYYY');
                        $('#item_edate').val(edate);
                        $('#hi_ibId').val(response[0].ibId);
                        $('#hi_uom').val(response[0].ib_uom);
                        $('#hi_uom2').val(response[0].ib_uom2);
                        $('#hi_uom3').val(response[0].ib_uom3);
                        $('#hi_mfactor').val(response[0].ib_m_factor);
                        $('#hi_mfactor2').val(response[0].ib_m_factor2);
                        $('#hi_itemId').val(response[0].itemId);
                        $('#hi_oldqty').val(response[0].ib_qty);
                        $('#hi_item_name').val(response[0].item_name);
                        $('#hi_item_code').val(response[0].ib_item);
                        $('#hi_batch').val(response[0].ib_batch);
                        AddingCalculation('Qty1');
                    }
                    else {

                        $('#item_qty').val('0');
                        $('#item_qty2').val('0');
                        $('#item_qty3').val('0');
                        $('#itemCost').val('0');
                        $('#item_edate').val('');
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    alert(xhr.statusText);
                }
            }).done(function () {
                //$('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                setTimeout(function () {
                    $('#select2-item_name-container').attr("title", $('#hi_item_name').val());
                }, 100);
            });
        }
    });
    //#endregion

    //#region Adding Item Calculation
    $("#item_qty").focusout('input', function () {
        AddingCalculation('Qty1');
    });
    $("#item_qty2").focusout('input', function () {
        AddingCalculation('Qty2');
    });
    $("#item_qty3").focusout('input', function () {
        AddingCalculation('Qty3');
    });
    var AddingCalculation = function (type) {
        $("#lbl_calculation_error").text("");
        $("#lbl_qty").text("");
        let _qty = $("#item_qty").val();
        let _qty2 = $("#item_qty2").val();
        let _qty3 = $("#item_qty3").val();
        let _m_factor = $("#hi_mfactor").val();
        let _m_factor2 = $("#hi_mfactor2").val();
        let _price = $("#itemCost").val();
        let totalAmount = 0;

        if (_qty === "" || _qty === null || _qty === undefined) {
            _qty = 0;
            $("#item_qty").val("0");
        }

        if (_qty2 === "" || _qty2 === null || _qty2 === undefined) {
            _qty2 = 0;
            $("#item_qty2").val("0");
        }

        if (_qty3 === "" || _qty3 === null || _qty3 === undefined) {
            _qty3 = 0;
            $("#item_qty3").val("0");
        }

        if (_m_factor === "" || _m_factor === null || _m_factor === undefined) {
            _m_factor = 0;
            $("#hi_mfactor").val("0");
        }

        if (_m_factor2 === "" || _m_factor2 === null || _m_factor2 === undefined) {
            _m_factor2 = 0;
            $("#hi_mfactor2").val("0");
        }

        if (type === 'Qty1') {
            _qty2 = parseFloat(_qty * _m_factor);
            $("#item_qty2").val(parseFloat(_qty2).toFixed(2));

            _qty3 = parseFloat(_qty2 * _m_factor2);
            $("#item_qty3").val(parseFloat(_qty3).toFixed(2));

            $("#item_qty").val(parseFloat(_qty).toFixed(2));
        }

        if (type === 'Qty2') {
            _qty = parseFloat(_qty2 / _m_factor);
            $("#item_qty").val(parseFloat(_qty).toFixed(2));

            _qty3 = parseFloat(_qty2 * _m_factor2);
            $("#item_qty3").val(parseFloat(_qty3).toFixed(2));

            $("#item_qty2").val(parseFloat(_qty2).toFixed(2));
        }

        if (type === 'Qty3') {
            _qty2 = parseFloat(_qty3 / _m_factor2);
            $("#item_qty2").val(parseFloat(_qty2).toFixed(2));

            _qty = parseFloat(_qty2 / _m_factor);
            $("#item_qty").val(parseFloat(_qty).toFixed(2));

            $("#item_qty3").val(parseFloat(_qty3).toFixed(2));
        }

        if (_price === "" || _price === null || _price === undefined) {
            _price = 0;
            $("#itemCost").val("0");
        }
        totalAmount = _qty * _price;
        $("#item_total").val(parseFloat(totalAmount).toFixed(2));
    }
    //#endregion

    //#region Bind DataTable
    var BindDataTable = function (response) {

        var numberRenderer1 = $.fn.dataTable.render.number(',', '.', 2,).display;
        var table = $("#tbl_qtyadjust_items").DataTable({
            processing: true,
            paging: false,
            ordering: false,
            info: false,
            "searching": false,
            "retrieve": true,
            lengthChange: false,
            "aaData": response,
            "aoColumns": [
                { "mData": "ibId" },
