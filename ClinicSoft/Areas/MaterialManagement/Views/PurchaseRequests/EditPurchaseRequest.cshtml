@model BusinessEntities.Accounts.MaterialManagement.PurchaseRequestsAndItems

<style type="text/css">
    #tbl_edit_purchaserequest_items_wrapper .dataTables_scroll .dataTables_scrollBody {
        min-height: auto;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title text-primary font-weight-semibold">Update Purchase Request</h5>
    <button aria-label="Close" data-bs-dismiss="modal" class="btn-close" type="button"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body p-4">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
            <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
        </div>
    </div>

    <form id="form_EditPurchaseRequest" >
        @Html.AntiForgeryToken()

        <div class="row mt-2">
            <div class="panel-group accordion-panel" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default active">
                    <div class="panel-heading bg-danger-1" role="tab" id="required-headingOne1">
                        <h4 class="panel-title">
                            <a role="button" data-bs-toggle="collapse" data-parent="#required-accordion1" href="#required-collapseOne1" aria-expanded="true" aria-controls="required-collapseOne1">
                                <span style="color:white; pointer-events:none;">Purchase Request Detail</span>
                                <span class="float-end" style="color:white;"><i class="fe fe-chevrons-down"></i></span>
                            </a>
                        </h4>
                    </div>
                    <div id="required-collapseOne1" class="panel-collapse collapse show" role="tabpanel" aria-labelledby="required-headingOne1">
                        <div class="mt-5">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                                            @Html.DropDownList("u_purq_branch", (IEnumerable<SelectListItem>)ViewData["BranchList"], "Please Select", new { @class = "form-select select2", @disabled = "true" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Supplier Name&nbsp;<span class="text-danger">*</span></label>
                                            @Html.DropDownList("u_purq_supplier", new List<SelectListItem>
                                               { }, "Select Supplier", new { @class = "form-control select2" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Type&nbsp;<span class="text-danger">*</span></label>
                                            @Html.DropDownListFor(m => m.purchaseRequests.purq_type, new List<SelectListItem>
                                            {
                                                new SelectListItem{ Text="Purchase Request", Value = "Purchase Request", Selected=true }
                                            }, "Select Type", new { @class = "form-control select2", @disabled = "true", name = "u_purq_type", id = "u_purq_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group mb-2">
                                            <label class="form-label text-black">Date&nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="fe fe-calendar"></i>
                                                </div>
                                            </div>
                                            @Html.TextBox("u_purq_odate", Model.purchaseRequests.purq_odate, new { @class = "form-control", maxlength = "18", @placeholder = "DD-MMM-YYYY" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Enq. No#</label>
                                            @Html.TextBox("u_purq_enqno", Model.purchaseRequests.purq_enqno, new { @class = "form-control", maxlength = "18", @placeholder = "Enter Enquiry No." })
                                        </div>
                                    </div>
                                    <div class="ccol-sm-12 col-md-6 col-lg-3 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Quotation No#</label>
                                            @Html.TextBox("u_purq_quono", Model.purchaseRequests.purq_quono, new { @class = "form-control", maxlength = "15", @placeholder = "Enter Quotation No." })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Validity (Days)</label>
                                            @Html.TextBox("u_purq_validity", Model.purchaseRequests.purq_validity, new { @class = "form-control", maxlength = "3", @placeholder = "Enter Pay Terms Days" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Payment Terms (Days)</label>
                                            @Html.TextBox("u_purq_pay_terms", Model.purchaseRequests.purq_pay_terms, new { @class = "form-control", maxlength = "3", @placeholder = "Enter Pay Terms Days" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Quotation Date</label>
                                            @Html.TextBox("u_purq_qdate", Model.purchaseRequests.purq_qdate, new { @class = "form-control", maxlength = "15", @placeholder = "DD-MMM-YYYY" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3 d-none" id="div_sup_invoice">
                                        <div class="form-group">
                                            <label class="form-label text-black">Supplier Invoice&nbsp;<span class="text-danger">*</span></label>
                                            @Html.TextBox("u_purq_sup_invoice", Model.purchaseRequests.purq_sup_invoice, new { @class = "form-control", maxlength = "20", @placeholder = "Enter Supplier Invoice No." })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label text-black">Notes</label>
                                            @Html.TextArea("u_purq_notes", Model.purchaseRequests.purq_notes, new { @class = "form-control", @placeholder = "Enter Notes", maxlength = "998", @rows = "3" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default mt-2 d-none">
