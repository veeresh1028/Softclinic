                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_bill_2", Model.purchaseRequests.purq_bill_2, new { @class = "form-control", @placeholder = "Ex : #347, 3rd Floor, Damas 2000, Rolla Sharja.", maxlength = "499" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">Telephone</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_bill_3", Model.purchaseRequests.purq_bill_3, new { @class = "form-control", @placeholder = "Ex : 971065634883", maxlength = "49" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">Email</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_bill_4", Model.purchaseRequests.purq_bill_4, new { @class = "form-control", @placeholder = "Ex : info@visionsoftwares.com", maxlength = "49" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="expanel expanel-secondary">
                                            <div class="expanel-heading">
                                                <div class="expanel-title">Contact info. of Buyer</div>
                                            </div>
                                            <div class="expanel-body">
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">To</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_buy_1", Model.purchaseRequests.purq_buy_1, new { @class = "form-control", @placeholder = "Ex : Vision Technologies", maxlength = "74" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">Address</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_buy_2", Model.purchaseRequests.purq_buy_2, new { @class = "form-control", @placeholder = "Ex : #349, 3rd Floor, Damas 2000, Rolla Sharja.", maxlength = "499" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">Telephone</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_buy_3", Model.purchaseRequests.purq_buy_3, new { @class = "form-control", @placeholder = "Ex : 971065634883", maxlength = "49" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">Email</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_buy_4", Model.purchaseRequests.purq_buy_4, new { @class = "form-control", @placeholder = "Ex : info@visionsoftwares.com", maxlength = "49" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default mt-2">
                    <div class="panel-heading" role="tab" id="required-headingTwo3">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-bs-toggle="collapse" data-parent="#required-accordion1" href="#required-collapseTwo3" aria-expanded="false" aria-controls="required-collapseTwo3" onclick="accordion_click();">
                                Purchase Request Items
                                <span class="float-end"><i class="fe fe-chevrons-down"></i></span>
                            </a>
                        </h4>
                    </div>
                    <div id="required-collapseTwo3" class="panel-collapse collapse" role="tabpanel" aria-labelledby="required-headingTwo3">
                        <div class="mt-5">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="ccol-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Items&nbsp;<span class="text-danger">*&nbsp;<label id="lbl_message" class="fw-bold"></label></span></label>
                                            <select class="form-control select2" id="u_item_name">
                                            </select>
                                        </div>
                                    </div>

                                    <div class="ccol-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Item Description</label>
                                            <input type="text" id="u_item_desc" class="form-control" maxlength="850" placeholder="Enter item Description" />
                                        </div>
                                    </div>

                                    <div class="ccol-sm-12 col-md-6 col-lg-3 d-none" id="div_item_batch">
                                        <div class="form-group">
                                            <label class="form-label">Batch / Expiry&nbsp;<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <input type="text" id="u_item_batch" class="form-control" maxlength="30" />
                                                <div class="input-group-append" style="max-width: 60%; min-width: 50%;">
                                                    <input type="text" id="u_item_expiry" class="form-control" placeholder="DD-MMM-YYYY" maxlength="15" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-2 col-lg-2">
                                        <div class="form-group">
                                            <label class="form-label">Qty / UoM&nbsp;<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <input type="text" id="u_item_qty" class="form-control" maxlength="8" onkeypress="return validateOneDecimalNumeric2(this,event);" value="0" />
                                                <div class="input-group-append" style="max-width: 70%; min-width: 50%;">
                                                    <select class="form-control select2" id="u_item_uom"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Price&nbsp;<span class="text-danger">*</span></label>
                                            <input type="text" id="u_item_price" class="form-control" maxlength="7" onkeypress="return validateOneDecimalNumeric2(this,event);" value="0" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Total&nbsp;<span class="text-danger">*</span></label>
                                            <input type="text" id="u_item_total" class="form-control" readonly="readonly" value="0" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-2 col-lg-2 d-none">
                                        <div class="form-group">
                                            <label class="form-label">Discount / Type</label>
                                            <div class="input-group">
                                                <input type="text" id="u_item_disc" class="form-control" maxlength="6" onkeypress="return validateOneDecimalNumeric2(this,event);" value="0" />
                                                <div class="input-group-append" style="max-width: 70%; min-width: 50%;">
                                                    <select class="form-control" id="u_item_disc_type">
                                                        <option value="Fixed">Fixed</option>
                                                        <option value="%">%</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Disc. Value</label>
                                            <input type="text" id="u_item_disc_value" class="form-control" readonly="readonly" value="0" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">NET&nbsp;<span class="text-danger">*</span></label>
                                            <input type="text" id="u_item_net" class="form-control" readonly="readonly" value="0" />
                                            <span class="text-danger" id="lbl_net_error"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">VAT %&nbsp;<span class="text-danger">*</span></label>
                                            <select class="form-control" id="u_item_vat_per">
                                                <option value="0">0 %</option>
                                                <option value="5">5 %</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">VAT</label>
                                            <input type="text" id="u_item_vat" class="form-control" readonly="readonly" value="0" />
                                            <span class="text-danger" id="lbl_vat_error"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-1 col-lg-1 d-none">
                                        <div class="form-group">
                                            <label class="form-label text-black">Net + VAT&nbsp;<span class="text-danger">*</span></label>
                                            <input type="text" id="u_item_netvat" class="form-control" readonly="readonly" value="0" />
                                            <span class="text-danger" id="lbl_netvat_error"></span>
