                                        <div class="expanel expanel-secondary">
                                            <div class="expanel-heading">
                                                <div class="expanel-title">Bill To</div>
                                            </div>
                                            <div class="expanel-body">
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-2 col-lg-2">
                                                        <label class="form-label text-black">To</label>
                                                    </div>
                                                    <div class="col-sm-12 col-md-10 col-lg-10">
                                                        <div class="form-group">
                                                            @Html.TextBox("u_purq_bill_1", Model.purchaseRequests.purq_bill_1, new { @class = "form-control", @placeholder = "Ex : Vision Technologies", maxlength = "74" })
