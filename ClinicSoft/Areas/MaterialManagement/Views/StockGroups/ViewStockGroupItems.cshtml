
@model IEnumerable<BusinessEntities.Accounts.Masters.Items>
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">
        Stock Group Items
        @{
            foreach (var dr in Model)
            {
                <text>-</text> <span class="badge bg-info text-uppercase">@dr.category_name </span> break;
            }
        }
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive" style="min-height:auto">
                        <table id="tbl_emp_desig" class="table table-striped table-bordered text-nowrap" style="width: 100%;">
                            <thead>
                                <tr style="color: #fff !important; background-color: #3C457D; border-color: #3C457D;">
                                    <th class="border-bottom-0 font-weight-semibold text-white">Item Code</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Item Name</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Type</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Qty</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">UOM</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Buy Price</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Sale Price</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Opening Qty</th>
                                    <th class="border-bottom-0 font-weight-semibold text-white">Status</th>
                                </tr>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@data.item_code</td>
                                        <td>@data.item_name</td>
                                        <td>@data.item_type</td>
                                        <td>@data.item_qty</td>
                                        <td>@data.item_uom</td>
                                        <td>@data.item_cost</td>
                                        <td>@data.item_sprice</td>
                                        <td>@data.item_opening_qty</td>
                                        <td>@data.item_status</td>
                                    </tr>
                                }
                            </thead>
                        </table>
                    </div>
                }
                else
                {
                    <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                        <div class="alert alert-light-info alert-dismissiblefade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <strong><i class="fa fa-exclamation-circle"></i> Info!&nbsp;</strong>There is no Items Created with This Stock Group!
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    #size {
        max-width: 1200px;
    }
</style>