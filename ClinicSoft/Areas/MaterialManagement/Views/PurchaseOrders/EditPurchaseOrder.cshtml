                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                                            @Html.DropDownList("u_pur_branch", (IEnumerable<SelectListItem>)ViewData["BranchList"], "Please Select", new { @class = "form-select select2", @disabled="true" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Supplier Name&nbsp;<span class="text-danger">*</span></label>
                                            @Html.DropDownList("u_pur_supplier", new List<SelectListItem>
                                               { }, "Select Supplier", new { @class = "form-control select2" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Type&nbsp;<span class="text-danger">*</span></label>
                                            @{
                                                string propertyName = nameof(Model.purchaseOrders.pur_type);
                                                string nameWithoutModel = "u_" + propertyName.Substring(propertyName.LastIndexOf('.') + 1);
                                                string selectedValue = Model.purchaseOrders.pur_type;
                                                string idWithoutModel = ViewData.TemplateInfo.GetFullHtmlFieldId(nameWithoutModel);
                                            }
                                            @Html.DropDownList(idWithoutModel, new List<SelectListItem>
                                            {
                                                new SelectListItem { Text="Purchase Order", Value = "Purchase Order", Selected = (selectedValue == "Purchase Order") },
                                                new SelectListItem { Text="Purchase Invoice", Value = "Purchase Invoice", Selected = (selectedValue == "Purchase Invoice") },
                                                new SelectListItem { Text="GRN Regular", Value = "GRN Regular", Selected = (selectedValue == "GRN Regular") }
                                            }, "Select Type", new { @class = "form-control select2", name = nameWithoutModel })


                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Date&nbsp;<span class="text-danger">*</span></label>
                                            @Html.TextBox("u_pur_odate", Model.purchaseOrders.pur_odate, new { @class = "form-control", maxlength = "18", @placeholder = "DD-MMMM-YYYY" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Enq. No#</label>
                                            @Html.TextBox("u_pur_enqno", Model.purchaseOrders.pur_enqno, new { @class = "form-control", maxlength = "15", @placeholder = "Enter Enquiry No." })

                                        </div>
                                    </div>
                                    <div class="ccol-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Quotation No#</label>
                                            @Html.TextBox("u_pur_quono", Model.purchaseOrders.pur_quono, new { @class = "form-control", maxlength = "15", @placeholder = "Enter Quotation No." })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Validity (Days)</label>
                                            @Html.TextBox("u_pur_validity", Model.purchaseOrders.pur_validity, new { @class = "form-control", maxlength = "3", @placeholder = "Enter Pay Terms Days" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label text-black">Payment Terms (Days)</label>
