                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Notes</label>
                                                @Html.TextAreaFor(sup => sup.purq_notes, new { @class = "form-control", maxlength = "998", @placeholder = "Enter Notes", @rows = "3" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
