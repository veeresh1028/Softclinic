@model BusinessEntities.Accounts.MaterialManagement.PurchaseRequests

<div class="modal-header py-4 px-5">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">Convert Purchase Request To Purchase Order</h5>
    <button aria-label="Close" data-bs-dismiss="modal" class="btn-close" type="button"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body p-4">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
            <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
        </div>
    </div>

    <div class="row mt-2">

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group mb-2">
                <label class="form-label font-weight-semibold">Branch</label>
                @Html.DropDownList("convert_branch", (IEnumerable<SelectListItem>)ViewData["BranchList"], "Select Branch", new { @class = "form-select select2" })
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group mb-2">
                <label class="form-label font-weight-semibold">Purchase Request</label>
                <select id="purchase_request" class="form-control select2 mb-4"></select>
            </div>
        </div>

        <form id="form_ConvertPurchaseRequest" class="d-none">
            @Html.AntiForgeryToken()
            <div class="row mt-2">
                <div class="panel-group accordion-panel" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default active">
                        <div class="panel-heading bg-danger-1" role="tab" id="required-headingOne1">
                            <h4 class="panel-title">
                                <a role="button" data-bs-toggle="collapse" data-parent="#required-accordion1" href="#required-collapseOne1" aria-expanded="true" aria-controls="required-collapseOne1">
                                    <span style="color:white; pointer-events:none;">Purchase Order Detail</span>
                                    <span class="float-end" style="color:white;"><i class="fe fe-chevrons-down"></i></span>
                                </a>
                            </h4>
                        </div>
                        <div id="required-collapseOne1" class="panel-collapse collapse" role="tabpanel" aria-labelledby="required-headingOne1">
                            <div class="mt-5">
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Type&nbsp;<span class="text-danger">*</span></label>
                                                @Html.DropDownListFor(m => m.purq_type, new List<SelectListItem>
                                                   {
                                                      new SelectListItem{ Text="Purchase Order", Value = "Purchase Order" },
                                                      new SelectListItem{ Text="Purchase Invoice", Value = "Purchase Invoice" },
                                                      new SelectListItem{ Text="GRN Regular", Value = "GRN Regular" },
                                                   }, "Select Type", new { @class = "form-control select2" })
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Date&nbsp;<span class="text-danger">*</span></label>
                                                @Html.TextBoxFor(sup => sup.purq_odate, new { @class = "form-control", @placeholder = "DD-MMMM-YYYY", maxlength = "18" })
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Enq. No#</label>
                                                @Html.TextBoxFor(sup => sup.purq_enqno, new { @class = "form-control mb-4", @placeholder = "Enter Enquiry No.", @style = "width:100%;", maxlength = "20" })
                                            </div>
                                        </div>
                                        <div class="ccol-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Quotation No#</label>
                                                @Html.TextBoxFor(sup => sup.purq_quono, new { @class = "form-control mb-4", @placeholder = "Enter Quotation No.", @style = "width:100%;", maxlength = "20" })
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Validity (Days)</label>
                                                @Html.TextBoxFor(sup => sup.purq_validity, new { @class = "form-control", @placeholder = "Enter Validity of Order", @value = "0", maxlength = "3" })
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Payment Terms (Days)</label>
                                                @Html.TextBoxFor(sup => sup.purq_pay_terms, new { @class = "form-control", @placeholder = "Enter Pay Terms Days", @value = "0", maxlength = "3" })
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label class="form-label text-black">Quotation Date</label>
                                                @Html.TextBoxFor(sup => sup.purq_qdate, new { @class = "form-control", maxlength = "18", @placeholder = "DD-MMMM-YYYY" })
                                            </div>
                                        </div>
