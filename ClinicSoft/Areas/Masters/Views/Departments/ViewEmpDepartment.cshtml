@model IEnumerable<BusinessEntities.Masters.EmployeesByDepartment>
<style type="text/css">
    #sizeV {
        max-width: 1200px;
    }
</style>
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">
        Employees Allocated to Department
        @{
            foreach (var dr in Model)
            {
                <text>-</text> <span class="badge bg-info text-uppercase">@dr.emp_dept_name </span> break;
            }
        }
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <div class="col-sm-12 col-md-12 col-lg-12">
        @if (Model.Any())
        {
            <div class="table-responsive" style="min-height:auto">
                <table id="tbl_emp_desig" class="table table-striped table-bordered text-nowrap" style="width: 100%;">
                    <thead>
                        <tr style="color: #fff !important; background-color: #3C457D; border-color: #3C457D;">
                            <th class="border-bottom-0 font-weight-semibold text-white">Employee Name</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Department</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Designation</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">License</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Mobile #</th>
                            <th class="border-bottom-0 font-weight-semibold text-white">Status</th>
                        </tr>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@data.emp_name</td>
                                <td>@data.emp_dept_name</td>
                                <td>@data.emp_desig_name</td>
                                <td>@data.emp_license</td>
                                <td>@data.emp_mob</td>
                                @if (data.emp_status == "Active")
                                {
                                    <td><i class="dot-label bg-success"></i> <span class="font-weight-semibold text-success">Active</span></td>
                                }
                                else if (data.emp_status == "Inactive")
                                {
                                    <td><i class="dot-label bg-warning"></i> <span class="font-weight-semibold text-warning">Inactive</span></td>
                                }
                                else
                                {
                                    <td><i class="dot-label bg-danger"></i> <span class="font-weight-semibold text-danger">Deleted</span></td>
                                }
                            </tr>
                        }
                    </thead>
                </table>
            </div>
        }
        else
        {
            <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
                <div class="alert alert-light-info alert-dismissiblefade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><i class="fa fa-exclamation-circle"></i> Info!&nbsp;</strong>Department not allocated to any Employee!
                </div>
            </div>
        }
    </div>
</div>