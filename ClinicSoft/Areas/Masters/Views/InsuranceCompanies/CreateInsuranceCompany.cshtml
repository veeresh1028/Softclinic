@model BusinessEntities.Masters.InsuranceCompanies
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold btnCloseCreate">Create Insurance Company</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <form id="form_Add_IC" class="needs-validation" >
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
                <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_branch, new SelectList(Model.BranchList, "id", "text"), "Please Select", new { @class = "form-select select2", @required = "required" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Insurance Type&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_type, new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Insurance", Value = "Insurance" },
                        new SelectListItem{ Text="Corporate", Value = "Corporate" }
                    }, "Please Select", new { @class = "form-select select2", @required = "" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Country&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_country, new SelectList(Model.CountryList, "id", "text"), "Please Select", new { @class = "form-select select2", @required = "required" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">TPA Name&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_name, new { @class = "form-control", @required = "", @placeholder = "Ex : Daman Insurance", @maxlength = "50" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-1">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Top Up %</label>
                    @Html.TextBoxFor(m => m.ic_share, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 5.50", @min = 0, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Receiver Code&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_code, new { @class = "form-control", @required = "", @placeholder = "Enter Receiver Code", @maxlength = "10" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Provider Code </label>
                    @Html.TextBoxFor(m => m.ic_city, new { @class = "form-control", @placeholder = "Enter Insurance Code", @maxlength = "25" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Contact Person </label>
                    @Html.TextBoxFor(m => m.ic_cperson, new { @class = "form-control", @placeholder = "Ex : Alston Rebello", @maxlength = "50" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Contact No. #</label>
                    @Html.TextBoxFor(m => m.ic_tel, new { @class = "form-control", @placeholder = "Ex : 065634883", @maxlength = "15" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">E-Mail</label>
                    @Html.TextBoxFor(m => m.ic_email, new { @class = "form-control", @placeholder = "Ex : username@domain.com", @type = "email", @maxlength = "50" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">VAT Reg No.</label>
                    @Html.TextBoxFor(m => m.ic_url, new { @class = "form-control", @placeholder = "Enter VAT Reg No", @maxlength = "60" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Price Factor (E & M)&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_discount, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 1.25", @min = 0, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Price Factor (CPT)&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_credit, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 5.41", @min = 0, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Top-Up Insurance</label>
                    @Html.DropDownListFor(m => m.ic_topup, new SelectList(Model.InsuranceList, "icId", "ic_name"), "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Address</label>
                    @Html.TextAreaFor(m => m.ic_address, new { @class = "form-control", @placeholder = "Ex : Sheikh Zaye Road, Dubai - UAE", @maxlength = "200" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Notes</label>
                    @Html.TextAreaFor(m => m.ic_notes, new { @class = "form-control", @placeholder = "Your notes will go here..", @maxlength = "600" })
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 col-md-12 col-lg-12 d-flex justify-content-center" id="errorCreate"></div>
            <div class="col-sm-12 col-lg-12 text-center">
                <div class="btn-list btn-animation">
                    <button type="submit" class="btn btn-success" id="btn_Insert">Create Insurance Company</button>
                    <button type="button" class="btn btn-outline-danger me-1 btnCloseCreate" data-bs-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    //#region Page Load
    $(function () {
        $("#ic_discount").val("1.00");

        $("#ic_credit").val("1.00");

        $('#ic_branch').select2({
            minimumResultsForSearch: '',
            maximumInputLength: 15,
            dropdownParent: $('#form_Add_IC'),
            width: '100%'
        });

        $('#ic_type').select2({
            minimumResultsForSearch: '-1',
            dropdownParent: $('#form_Add_IC'),
            width: '100%'
        });

        $('#ic_country').select2({
            minimumResultsForSearch: '',
            maximumInputLength: 10,
            dropdownParent: $('#form_Add_IC'),
            width: '100%'
        });

        $('#ic_topup').select2({
            minimumResultsForSearch: '',
            dropdownParent: $('#form_Add_IC'),
            width: '100%'
        });

        validation();
    });
    //#endregion

    //#region Validation Initialization
    var validation = function () {
        $("#form_Add_IC").validate({
            focusInvalid: true,
            rules:
            {
                ic_branch: {
                    required: true
                },
                ic_type: {
                    required: true
                },
                ic_country: {
                    required: true
                },
                ic_name: {
                    required: true
                },
                ic_code: {
                    required: true
                },
                ic_discount: {
                    required: true
                },
                ic_credit: {
                    required: true
                }
            },
            messages: {
                ic_branch: {
                    required: "Select Branch"
                },
                ic_type: {
                    required: "Select Insurance Type"
                },
                ic_country: {
                    required: "Select Country"
                },
                ic_name: {
                    required: "Enter Insurance Name"
                },
                ic_code: {
                    required: "Enter Receiver Code"
                },
                ic_discount: {
                    required: "Enter Prime Factor (E & M)"
                },
                ic_credit: {
                    required: "Enter Prime Factor (CPT)"
                }
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });

        $('#ic_branch').on('change', function () {
            $(this).trigger('blur');
        });
        $('#ic_type').on('change', function () {
            $(this).trigger('blur');
        });
        $('#ic_country').on('change', function () {
            $(this).trigger('blur');
        });

        $('#ic_name').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            if (String.fromCharCode(charCode).match(/[^a-zA-Z ]/g))
                return false;
        });
        $('#ic_tel').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            if (String.fromCharCode(charCode).match(/[^0-9+]/g))
                return false;
        });

        $('#ic_share').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode;
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });

        $('#ic_discount').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });

        $('#ic_credit').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });
        
        $("#ic_share").on('input', function () {
            var disc = $(this).val();
            if (disc == "" || disc == null || disc == undefined) {
                $("#ic_share").val(0.00);
            }
        });

        $("#ic_discount").on('input', function () {
            var deci = $(this).val();
            if (deci == "" || deci == null || deci == undefined) {
                $("#ic_discount").val(1.00);
            }
        });

        $("#ic_credit").on('input', function () {
            var deci = $(this).val();
            if (deci == "" || deci == null || deci == undefined) {
                $("#ic_credit").val(1.00);
            }
        });
    };
    //#endregion

    //#region Validate Decimal
    function validateOneDecimalNumeric(el, evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        var number = el.value.split('.');
        if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        //just one dot
        if (number.length > 1 && charCode == 46) {
            return false;
        }
        //get the Current position
        var caratPos = getSelectionStart(el);
        var dotPos = el.value.indexOf(".");
        if (caratPos > dotPos && dotPos > -1 && (number[1].length > 1)) {
            return false;
        }
        return true;
    }
    function getSelectionStart(o) {
        if (o.createTextRange) {
            var r = document.selection.createRange().duplicate()
            r.moveEnd('character', o.value.length)
            if (r.text == '') return o.value.length
            return o.value.lastIndexOf(r.text)
        } else return o.selectionStart
    }
    //#endregion

    //#region Insert Insurance Company Click
    $('#btn_Insert').on('click', function (e) {
        e.preventDefault();

        if ($("#form_Add_IC").valid()) {

            $('#btn_Insert_Emp').removeClass("btn btn-success");
            $('#btn_Insert_Emp').addClass("btn btn-success btn-loaders btn-icon");
            $('#btn_Insert_Emp').parent().addClass("curdrop");
            $('.btnCloseCreate').addClass("disabled");
            $('#btn_Insert_Emp').html("Creating...");

            var icId = 0;
            var ic_branch = $("#ic_branch :selected").val();
            var ic_type = $("#ic_type :selected").val();
            var ic_country = $("#ic_country :selected").val();
            var ic_name = $("#ic_name").val().trim();
            var ic_share = $("#ic_share").val();
            var ic_code = $("#ic_code").val().trim();
            var ic_city = $("#ic_city").val().trim();
            var ic_cperson = $("#ic_cperson").val().trim();
            var ic_fax = "True";
            var ic_tel = $("#ic_tel").val().trim();
            var ic_email = $("#ic_email").val().trim();
            var ic_url = $("#ic_url").val().trim();
            var ic_discount = $("#ic_discount").val();
            var ic_credit = $("#ic_credit").val();
            var ic_topup = $("#ic_topup :selected").val();

            if (ic_topup == '') {
                ic_topup = 0;
            }

            var ic_address = $("#ic_address").val().trim();
            var ic_notes = $("#ic_notes").val().trim();
            var ic_parent = 0;
            var ic_account = "AS1-2-1";
            var ic_obal = "0";
            var ic_obal_type = "D";

            var _dataInsert = {
                "icId"          : icId,
                "ic_branch"     : ic_branch,
                "ic_type"       : ic_type,
                "ic_country"    : ic_country,
                "ic_name"       : ic_name,
                "ic_share"      : ic_share,
                "ic_code"       : ic_code,
                "ic_city"       : ic_city,
                "ic_cperson"    : ic_cperson,
                "ic_tel"        : ic_tel,
                "ic_email"      : ic_email,
                "ic_url"        : ic_url,
                "ic_discount"   : ic_discount,
                "ic_credit"     : ic_credit,
                "ic_topup"      : ic_topup,
                "ic_address"    : ic_address,
                "ic_notes"      : ic_notes,
                "ic_fax"        : ic_fax,
                "ic_parent"     : ic_parent,
                "ic_account"    : ic_account,
                "ic_obal"       : ic_obal,
                "ic_obal_type"  : ic_obal_type,
                "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("InsertInsuranceCompany", "InsuranceCompanies", new { area = "Masters" })",
                dataType: 'json',
                data: _dataInsert,
                success: function (data) {
                    $('#btn_Insert_Emp').parent().removeClass("curdrop");
                    $('#btn_Insert_Emp').removeClass("btn btn-success btn-loaders btn-icon");
                    $('#btn_Insert_Emp').addClass("btn btn-success");
                    $('#btn_Insert_Emp').html("Create Insurance Company");
                    $('.btnCloseCreate').removeClass("disabled");
                    $("#errorCreate").html('');

                    var alertPlaceholder = document.getElementById("InsuranceAlert");
                    function alert(e, t) {
                        var l = document.createElement("div");
                        l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                    }

                    if (data.isSuccess) {
                        if (data.isInserted) {
                            GetInsuranceCompanies();

                            alert("<i class='fe fe-check-circle text-white'></i> Insurance Company Created Successfully!", "success");
                            $('#create_ic_modal').modal('toggle');
                            Timeout();
                        }
                        else {
                            let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                "<div class='alert alert-light-warning' role='alert'>" +
                                "<button type='button' class='btn-close text-warning' style='margin-bottom:-5px;' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                "<strong><i class='fa fa-exclamation-triangle text-warning'></i> Insurance Company Already Exists with the same details!</strong><br/>" +
                                "</div></div>";
                            $("#errorCreate").html(html);
                        }
                    }
                    else {
                        let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                            "<div class='alert alert-light-danger' role='alert'>" +
                            "<button type='button' class='btn-close text-danger' style='margin-bottom:-5px;' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                            "<strong><i class='fa fa-ban text-danger'></i> Validation Error! Please validate before submitting.&nbsp;</strong><br/><ul>";

                        $.each(data.message, function (index, value) {
                            html += "<li><small>" + value + "</small><li>";
                            var elem = $("#" + index);
                            if (elem.hasClass("select2-hidden-accessible")) {
                                $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                            }
                            else {
                                $(elem).addClass(" is-invalid");
                            }

                            setTimeout(function () {
                                if (elem.hasClass("select2-hidden-accessible")) {
                                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                                }
                                else {
                                    $(elem).removeClass("is-invalid");
                                }
                            }, 5000);
                        });

                        html += "</ul></div></div>";
                        $("#errorCreate").html(html);
                    }
                },
                error: function (xhr) {
                    $('#btn_Insert_Emp').parent().removeClass("curdrop");
                    $('#btn_Insert_Emp').removeClass("btn btn-success btn-loaders btn-icon");
                    $('#btn_Insert_Emp').addClass("btn btn-success");
                    $('#btn_Insert_Emp').html("Create Insurance Company");
                    $('.btnCloseCreate').removeClass("disabled");
                    $('#create_ic_modal').modal('toggle');
                    Timeout();
                }
            });
        }
        else
        {
            $('.modal-body').animate({
                scrollTop: ($('.has-error').offset().top - 300)
            }, 2000);
        }
    });
    //#endregion
</script>