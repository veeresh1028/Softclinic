@model BusinessEntities.Masters.InsuranceCompanies
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold">Update Insurance Company</h5>
    <button type="button" class="btn-close btnCloseEdit" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <form id="form_Edit_IC" class=" needs-validation" >
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.icId)
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
                <span class="text-danger" style="font-size:smaller">Required fields are marked with *</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_branch, new SelectList(Model.BranchList, "id", "text"), "Please Select", new { @class = "form-select select2", @required = "required", @id = "uic_branch" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Insurance Type&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_type, new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Insurance", Value = "Insurance" },
                        new SelectListItem{ Text="Corporate", Value = "Corporate" }
                    }, "Please Select", new { @class = "form-select select2", @required = "", @id = "uic_type" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Country&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.ic_country, new SelectList(Model.CountryList, "id", "text"), "Please Select", new { @class = "form-select select2", @required = "required", @id = "uic_country" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">TPA Name&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_name, new { @class = "form-control", @required = "", @placeholder = "Ex : Daman Insurance", @maxlength = "50", @id = "uic_name" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-1">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Top Up %</label>
                    @Html.TextBoxFor(m => m.ic_share, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 5.00", @min = 0, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);", @id = "uic_share" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Receiver Code&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_code, new { @class = "form-control", @required = "", @placeholder = "Enter Receiver Code", @maxlength = "10", @id = "uic_code" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Insurance Code </label>
                    @Html.TextBoxFor(m => m.ic_city, new { @class = "form-control", @placeholder = "Enter Insurance Code", @maxlength = "25", @id = "uic_city" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Contact Person </label>
                    @Html.TextBoxFor(m => m.ic_cperson, new { @class = "form-control", @placeholder = "Ex : Alston Rebello", @maxlength = "50", @id = "uic_cperson" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Contact No. #</label>
                    @Html.TextBoxFor(m => m.ic_tel, new { @class = "form-control", @placeholder = "Ex : 065634883", @maxlength = "15", @id = "uic_tel" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">E-Mail</label>
                    @Html.TextBoxFor(m => m.ic_email, new { @class = "form-control", @placeholder = "Ex : username@domain.com", @type = "email", @maxlength = "50", @id = "uic_email" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">VAT Reg No.</label>
                    @Html.TextBoxFor(m => m.ic_url, new { @class = "form-control", @placeholder = "Enter VAT Reg No", @maxlength = "60", @id = "uic_url" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Price Factor (E & M)&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_discount, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 1.25", @min = 1, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);", @id = "uic_discount" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Price Factor (CPT)&nbsp;<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.ic_credit, new { @class = "form-control mb-2 text-right", @placeholder = "Ex: 5.41", @min = 1, @max = 100, @onkeypress = "return validateOneDecimalNumeric(this,event);", @id = "uic_credit" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-2">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Top-Up Insurance</label>
                    @Html.DropDownListFor(m => m.ic_topup, new SelectList(Model.InsuranceList, "icId", "ic_name"), "Please Select", new { @class = "form-select select2", @id = "uic_topup" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Address</label>
                    @Html.TextAreaFor(m => m.ic_address, new { @class = "form-control", @placeholder = "Ex : Sheikh Zaye Road, Dubai - UAE", @maxlength = "200", @id = "uic_address" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="form-group mb-3">
                    <label class="form-label text-black">Notes</label>
                    @Html.TextAreaFor(m => m.ic_notes, new { @class = "form-control", @placeholder = "Your notes will go here..", @maxlength = "600", @id = "uic_notes" })
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div id="errorEdit"></div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                <div class="btn-list btn-animation">
                    <button type="submit" class="btn btn-warning" id="btn_Update">Save Changes</button>
                    <button type="button" class="btn btn-outline-danger me-1 btnCloseEdit" data-bs-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    //#region Page Load
    $(function () {
        $('#uic_branch').select2({
            minimumResultsForSearch: '',
            maximumInputLength: 15,
            dropdownParent: $('#form_Edit_IC'),
            width: '100%'
        });

        $('#uic_type').select2({
            minimumResultsForSearch: '-1',
            dropdownParent: $('#form_Edit_IC'),
            width: '100%'
        });

        $('#uic_country').select2({
            minimumResultsForSearch: '',
            maximumInputLength: 10,
            dropdownParent: $('#form_Edit_IC'),
            width: '100%'
        });

        $('#uic_topup').select2({
            minimumResultsForSearch: '',
            dropdownParent: $('#form_Edit_IC'),
            width: '100%'
        });

        validate();
    });
    //#endregion Page Load

    //#region Validation Initialization
    var validate = function () {
        $("#form_Edit_IC").validate({
            focusInvalid: true,
            rules:
            {
                ic_branch: {
                    required: true
                },
                ic_type: {
                    required: true
                },
                ic_country: {
                    required: true
                },
                ic_name: {
                    required: true
                },
                ic_code: {
                    required: true
                },
                ic_discount: {
                    required: true
                },
                ic_credit: {
                    required: true
                }
            },
            messages: {
                ic_branch: {
                    required: "Select Branch"
                },
                ic_type: {
                    required: "Select Insurance Type"
                },
                ic_country: {
                    required: "Select Country"
                },
                ic_name: {
                    required: "Enter Insurance Name"
                },
                ic_code: {
                    required: "Enter Receiver Code"
                },
                ic_discount: {
                    required: "Enter P.F. (E & M)"
                },
                ic_credit: {
                    required: "Enter P.F. (CPT)"
                }
            },
            highlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                } else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-bold',
            errorPlacement: function (error, element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                } else {
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });

        $('#uic_branch').on('change', function () {
            $(this).trigger('blur');
        });
        $('#uic_type').on('change', function () {
            $(this).trigger('blur');
        });
        $('#uic_country').on('change', function () {
            $(this).trigger('blur');
        });

        $('#uic_name').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            if (String.fromCharCode(charCode).match(/[^a-zA-Z ]/g))
                return false;
        });
        $('#uic_tel').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            if (String.fromCharCode(charCode).match(/[^0-9+]/g))
                return false;
        });

        $('#uic_share').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode;
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });
        $('#uic_discount').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });
        $('#uic_credit').keypress(function (e) {
            var charCode = (e.which) ? e.which : e.keyCode
            var inputValue = $(this).val() + String.fromCharCode(charCode);

            if (String.fromCharCode(charCode).match(/[^0-9.]/g)) {
                return false;
            }

            if (parseFloat(inputValue) > 100) {
                return false;
            }
        });

        $("#uic_share").on('input', function () {
            var disc = $(this).val();
            if (disc == "" || disc == null || disc == undefined) {
                $("#uic_share").val("0.00");
            }
        });
        $("#uic_discount").on('input', function () {
            var deci = $(this).val();
            if (deci == "" || deci == null || deci == undefined) {
                $("#uic_discount").val("1.00");
            }
        });
        $("#uic_credit").on('input', function () {
            var deci = $(this).val();
            if (deci == "" || deci == null || deci == undefined) {
                $("#uic_credit").val("1.00");
            }
        });
    };
    //#endregion

    //#region Validate Decimal
    function validateOneDecimalNumeric(el, evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        var number = el.value.split('.');
        if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        //just one dot
        if (number.length > 1 && charCode == 46) {
            return false;
        }
        //get the Current position
        var caratPos = getSelectionStart(el);
        var dotPos = el.value.indexOf(".");
        if (caratPos > dotPos && dotPos > -1 && (number[1].length > 1)) {
            return false;
        }
        return true;
    }
    function getSelectionStart(o) {
        if (o.createTextRange) {
            var r = document.selection.createRange().duplicate()
            r.moveEnd('character', o.value.length)
            if (r.text == '') return o.value.length
            return o.value.lastIndexOf(r.text)
        } else return o.selectionStart
    }
    //#endregion

    //#region Update Insurance Company Click
    $('#btn_Update').on('click', function (e) {
        e.preventDefault();

        if ($("#form_Edit_IC").valid()) {
            $('#btn_Update').removeClass("btn btn-warning");
            $('#btn_Update').addClass("btn btn-warning btn-loaders btn-icon");
            $('#btn_Update').parent().addClass("curdrop");
            $('.btnCloseEdit').addClass("disabled");
            $('#btn_Update').html("Saving Changes... Please Wait");

            var ic_topup = $("#uic_topup :selected").val();

            if (ic_topup == '') {
                ic_topup = 0;
            }

            var _dataUpdate = {
                "icId":         $("#icId").val(),
                "ic_branch":    $("#uic_branch :selected").val(),
                "ic_type":      $("#uic_type :selected").val(),
                "ic_country":   $("#uic_country :selected").val(),
                "ic_name":      $("#uic_name").val().trim(),
                "ic_share":     $("#uic_share").val(),
                "ic_code":      $("#uic_code").val().trim(),
                "ic_city":      $("#uic_city").val().trim(),
                "ic_cperson":   $("#uic_cperson").val().trim(),
                "ic_tel":       $("#uic_tel").val().trim(),
                "ic_email":     $("#uic_email").val().trim(),
                "ic_url":       $("#uic_url").val().trim(),
                "ic_discount":  $("#uic_discount").val(),
                "ic_credit":    $("#uic_credit").val(),
                "ic_topup":     ic_topup,
                "ic_address":   $("#uic_address").val().trim(),
                "ic_notes":     $("#uic_notes").val().trim(),
                "ic_fax":       "True",
                "ic_parent": 0,
                "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("UpdateInsuranceCompany", "InsuranceCompanies", new { area = "Masters" })",
                dataType: 'json',
                data: _dataUpdate,
                success: function (data) {
                    $('#btn_Update').parent().removeClass("curdrop");
                    $('.btnCloseEdit').removeClass("disabled");
                    $('#btn_Update').removeClass("btn btn-warning btn-loaders btn-icon");
                    $('#btn_Update').addClass("btn btn-warning");
                    $('#btn_Update').html("Save Changes");

                    var alertPlaceholder = document.getElementById("InsuranceAlert");
                    function alert(e, t) {
                        var l = document.createElement("div");
                        l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                    }

                    if (data.isSuccess) {
                        if (data.isUpdated) {
                            GetInsuranceCompanies();
                            alert("<i class='fe fe-check-circle text-white'></i> Insurance Company Updated Successfully!", "success");
                            $('#update_ic_modal').modal('toggle');
                            Timeout();
                        }
                        else {
                            let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                "<div class='alert alert-light-warning' role='alert'>" +
                                "<button type='button' class='btn-close text-warning' style='margin-bottom:-5px;' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                "<strong><i class='fa fa-exclamation-triangle text-warning'></i> Insurance Company Already Exists with the same details!</strong><br/>" +
                                "</div></div>";
                            $("#errorEdit").html(html);
                        }
                    }
                    else {
                        let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                            "<div class='alert alert-light-danger' role='alert'>" +
                            "<button type='button' class='btn-close text-danger' style='margin-bottom:-5px;' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                            "<strong><i class='fa fa-ban text-danger'></i> Validation Error! Please validate before submitting.</strong><br/><ul>";

                        $.each(data.message, function (index, value) {
                            html += "<li><small>" + value + "</small><li>";
                            var elem = $("#" + index);
                            if (elem.hasClass("select2-hidden-accessible")) {
                                $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                            }
                            else {
                                $(elem).addClass(" is-invalid");
                            }

                            setTimeout(function () {
                                if (elem.hasClass("select2-hidden-accessible")) {
                                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                                }
                                else {
                                    $(elem).removeClass("is-invalid");
                                }
                            }, 5000);
                        });

                        html += "</ul></div></div>";
                        $("#errorEdit").html(html);
                    }
                },
                error: function (xhr) {
                    $('#btn_Update').parent().removeClass("curdrop");
                    $('.btnCloseEdit').removeClass("disabled");
                    $('#btn_Update').removeClass("btn btn-warning btn-loaders btn-icon");
                    $('#btn_Update').addClass("btn btn-warning");
                    $('#btn_Update').html("Save Changes");
                    $('#update_ic_modal').modal('toggle');
                    Timeout();
                }
            });
        }
        else
        {
            $('.modal-body').animate({
                scrollTop: ($('.has-error').offset().top - 300)
            }, 2000);
        }
    });
    //#endregion
</script>