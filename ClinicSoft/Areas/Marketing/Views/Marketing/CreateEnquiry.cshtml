@model BusinessEntities.Marketing.Enquiry
<style>
    #enqS {
        max-width: 800px;
    }
</style>
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold">Create New Enquiry</h5>
    <button type="button" class="btn-close btnCloseEnquiry" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <form id="form_Create_Enquiry" >
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    <label class="form-label"> Branch&nbsp;<span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.app_branch, new SelectList(Model.BranchList, "id", "text"), "Please Select", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    <label class="form-label" title="">Date&nbsp;<span class="text-danger">*</span> </label>
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fe fe-calendar"></i>
                        </div>
                    </div>
                    @Html.TextBoxFor(model => model.app_fdate, new { @class = "form-control", @placeholder = "DD-MM-YYYY" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                    <label class="form-label">
                        Source&nbsp;<span class="text-danger">*</span>
                        <button class="btn btn-outline-dark btn-sm ms-lg-2 ms-sm-2" type="button" id="btnCreateSource">
                            <i class="fa fa-bullseye"></i>
                            Add New Source
                        </button>
                    </label>
                    @Html.DropDownListFor(m => m.app_source, new List<SelectListItem> { }, "Search for", new { @class = "form-select select2" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                    <label class="form-label">
                        Campaign&nbsp;<span class="text-danger">*</span>
                        <button class="btn btn-outline-dark btn-sm ms-lg-2 ms-sm-2" type="button" id="btnCreateCampaign">
                            <i class="fa fa-bullseye"></i>
                            Add New Campaign
                        </button>
                    </label>
                    @Html.DropDownListFor(m => m.app_campaign, new List<SelectListItem> { }, "Search for", new { @class = "form-select select2" })
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    <label class="form-label"> Search Patient By&nbsp;<span class="text-danger">*</span></label>
                    <div class="custom-controls d-lg-flex d-md-flex flex-row justify-content-left mb-2">
                        <label class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="rdo_s_patient" value="1">
                            <span class="custom-control-label">MRN</span>
                        </label>
                        <label class="custom-control custom-radio ms-sm-2 md-md-2 ms-lg-2">
                            <input type="radio" class="custom-control-input" name="rdo_s_patient" value="2">
                            <span class="custom-control-label">Name</span>
                        </label>
                        <label class="custom-control custom-radio ms-sm-2 md-md-2 ms-lg-2">
                            <input type="radio" class="custom-control-input" name="rdo_s_patient" value="3" checked>
                            <span class="custom-control-label">Mobile No</span>
                        </label>
                        <label class="custom-control custom-radio ms-sm-2 md-md-2 ms-lg-2">
                            <input type="radio" class="custom-control-input" name="rdo_s_patient" value="4">
                            <span class="custom-control-label">Emirates ID</span>
                        </label>
                        <div class="btn-list ms-sm-2 md-md-2 ms-lg-2">
                            <button class="btn btn-outline-info btn-sm" type="button" id="btnCreateEnquiry">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-paper me-1" viewBox="0 0 16 16">
                                    <path d="M4 0a2 2 0 0 0-2 2v1.133l-.941.502A2 2 0 0 0 0 5.4V14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.4a2 2 0 0 0-1.059-1.765L14 3.133V2a2 2 0 0 0-2-2H4Zm10 4.267.47.25A1 1 0 0 1 15 5.4v.817l-1 .6v-2.55Zm-1 3.15-3.75 2.25L8 8.917l-1.25.75L3 7.417V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v5.417Zm-11-.6-1-.6V5.4a1 1 0 0 1 .53-.882L2 4.267v2.55Zm13 .566v5.734l-4.778-2.867L15 7.383Zm-.035 6.88A1 1 0 0 1 14 15H2a1 1 0 0 1-.965-.738L8 10.083l6.965 4.18ZM1 13.116V7.383l4.778 2.867L1 13.117Z" />
                                </svg>
                                Add New Patient
                            </button>
                        </div>
                    </div>
                    @Html.DropDownListFor(m => m.app_patient, new List<SelectListItem> { }, "Search for", new { @class = "form-select select2 mb-4" })
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    <label class="form-label"> Comments</label>
                    @Html.TextAreaFor(model => model.app_comments, new { @class = "form-control", @placeholder = "Enter comments here..." })
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 col-md-12 col-lg-12 d-flex justify-content-center" id="errorCEnq"></div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                <div class="btn-list btn-animation">
                    <button type="submit" class="btn btn-success" id="btn_Insert_Enquiry">Create Enquiry</button>
                    <button type="button" class="btn btn-outline-danger me-1 btnCloseEnquiry" data-bs-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    //#region Document Load
    $(function () {
        $("#app_branch").select2({
            placeholder: 'Select a Branch',
            width: '100%',
            dropdownParent: $('#form_Create_Enquiry')
        });

        $('#app_fdate').bootstrapdatepicker({
            format: "dd-MM-yyyy",
            viewMode: "date",
            todayHighlight: true,
            autoclose: true,
            multidate: false,
            multidateSeparator: "-",
            startDate: new Date()
        });
        $("#app_fdate").bootstrapdatepicker("setDate", "today");

        load_patients();
        load_sources();
        load_campaigns();
        validation();
    });
    //#endregion

    //#region Validation Initialization
    var validation = function () {
        $("#form_Create_Enquiry").validate({
            focusInvalid: true,
            rules:
            {
                app_branch: {
                    required: true
                },
                app_fdate: {
                    required: true
                },
                app_patient : {
                    required: true
                },
                app_source: {
                    required: true
                },
                app_campaign: {
                    required: true
                }
            },
            messages: {
                app_branch: {
                    required: "Please Select Branch"
                },
                app_fdate: {
                    required: "Please Select Date"
                },
                app_patient: {
                    required: "Please Select Patient"
                },
                app_source: {
                    required: "Please Select Source"
                },
                app_campaign: {
                    required: "Please Select Campaign"
                }
            },
            highlight: function (element) {
                var elem = $(element);

                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                }
                else {
                    elem.parent().addClass('has-error');
                }
                $(element).parent().addClass('has-error');
                error_Timeout(elem.attr("id"));
            },
            unhighlight: function (element) {
                var elem = $(element);
                if (elem.hasClass("select2-hidden-accessible")) {
                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                } else {
                    elem.removeClass('has-error');
                }
                $(element).parent().removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'text-danger fw-semibold',
            errorPlacement: function (error, element) {
                var elem = $(element);

                if (elem.hasClass("select2-hidden-accessible")) {
                    element = $("#select2-" + elem.attr("id") + "-container").parent();
                    error.insertAfter(element);
                }
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                }
                else {
                    error.insertAfter(element);
                }
            }
        });

        $('#app_branch').on('change', function () {
            $(this).trigger('blur');
        });

        $('#app_fdate').on('change', function () {
            $(this).trigger('blur');
        });

        $('#app_patient').on('change', function () {
            $(this).trigger('blur');
        });

        $('#app_campaign').on('change', function () {
            $(this).trigger('blur');
        });

        $('#app_source').on('change', function () {
            $(this).trigger('blur');
        });

        $('#app_fdate').keypress(function (e) {
            var charCode = (e.which) ? e.which : event.keyCode
            if (String.fromCharCode(charCode).match(/[^0-9./-]/g)) {
                return false;

            }
            else {
                if (e.target.value.length >= 11)
                    return false;
            }
        });
    }
    //#endregion

    //#region Load Patients
    var load_patients = function () {
        $("#app_patient").select2({
            placeholder: 'Search Patient',
            width: '100%',
            dropdownParent: $('#form_Create_Enquiry'),
            minimumInputLength: 3,
            escapeMarkup: function (markup) {
                return markup;
            },
            ajax: {
                url: '@Url.Action("SearchPatients", "Appointment", new { area = "Appointment" })',
                dataType: 'json',
                delay: 250,
                data: function (query) {
                    return {
                        query: query.term,
                        type: $("input[name='rdo_s_patient']:checked").val()
                    };
                },
                processResults: function (data) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });
    }
    //#endregion

    //#region Load Sources
    var load_sources = function () {
        $("#app_source").select2({
            placeholder: 'Select Source',
            width: '100%',
            dropdownParent: $('#form_Create_Enquiry'),
            minimumInputLength: '',
            escapeMarkup: function (markup) {
                return markup;
            },
            ajax: {
                url: '@Url.Action("GetSources", "Marketing", new { area = "Marketing" })',
                dataType: 'json',
                delay: 250,
                data: function (query) {
                    return {
                        query: query.term
                    };
                },
                processResults: function (data) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });
    }
    //#endregion

    //#region Load Campaigns
    var load_campaigns = function () {
        $("#app_campaign").select2({
            placeholder: 'Select Campaign',
            width: '100%',
            dropdownParent: $('#form_Create_Enquiry'),
            minimumInputLength: '',
            escapeMarkup: function (markup) {
                return markup;
            }
        });

        $('#app_source').on('select2:select', function () {

            if ($(this).val() != "" && $('#app_source').val() != "") {

                var _data = {
                    "Sources": $(this).val()
                }

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetCampaignsBySources", "Marketing", new { area = "Marketing" })',
                    dataType: 'JSON',
                    data: _data,
                    success: function (response) {
                        $("#app_campaign").empty();
                        if (response.length > 0) {
                            $.each(response, function (j) {
                                var newOption = new Option(response[j].text, response[j].id, false, false);
                                $('#app_campaign').append(newOption).trigger('change');
                            });
                        }
                    },
                    error: function (xhr) {
                        console.log("Failed to Load Campaigns! Error Message : " + xhr.statusText);
                    }
                });
            }
            else {
                $('#app_campaign').val("").text("").trigger("change");
            }
        });
    }
    //#endregion

    //#region Create Enquiry Patient
    $('#btnCreateEnquiry').on('click', function (e) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("CreateInquiryPatient", "Patient", new { area = "Patient" })",
            contentType: "application/json",
            dataType: "html",
            success: function (data) {
                $('#create_enquiry').modal('hide');
                $('#inquiry_modal').attr("data-modal-from", "create-enquiry");

                $("#inquiry_modal_body").html(data);
                $('#inquiry_modal').modal('show');
            },
            error: function (xhr) {
                console.log("Error : " + xhr.statusText);
            }
        });
    });
    //#endregion

    //#region Create Enquiry Patient On Modal Close
    $('#inquiry_modal').on('hidden.bs.modal', function () {
        if (localStorage.getItem("newInquiry") != null) {
            var patient = JSON.parse(localStorage.getItem("newInquiry"));
            setPatient(patient.piId);
            localStorage.removeItem("newInquiry");
        }
    });
    //#endregion

    //#region Set Patient Details
    var setPatient = function (app_ins) {
        $.ajax({
            url: '@Url.Action("SearchPatients", "Appointment", new { area = "Appointment" })?query=' + app_ins +'&type=5',
            type: "GET",
            dataType: "json",
            async: false,
            success: function (response) {
                var data = {
                    "id": response[0].id,
                    "text": response[0].text,
                };

                var newOption = new Option(response[0].text, response[0].id, true, true);
                $('#app_patient').append(newOption).trigger('change');

                $('#app_patient').trigger({
                    type: 'select2:select',
                    params: {
                        data: data
                    }
                });
            },
            error: function (xhr) {
                console.log(xhr.statusText);
            }
        });
    }
    //#endregion

    //#region Create Source
    $('#btnCreateSource').on('click', function (e) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("CreateSource", "SourceCampaigns", new { area = "Masters" })",
            contentType: "application/json",
            dataType: "html",
            success: function (data) {
                $('#create_enquiry').modal('hide');
                $('#source_modal').attr("data-modal-from", "create-enquiry");

                $("#source_body").html(data);
                $('#source_modal').modal('show');
            },
            error: function (xhr) {
                console.log("Error : " + xhr.statusText);
            }
        });
    });
    //#endregion

    //#region Create Source On Modal Close
    $('#source_modal').on('hidden.bs.modal', function () {
        if (localStorage.getItem("newSource") != null) {
            var source = JSON.parse(localStorage.getItem("newSource"));
            setSource(source);
            localStorage.removeItem("newSource");
        }
    });
    //#endregion

    //#region Set Source
    var setSource = function (response) {

        var data = {
            "id": response.id,
            "text": response.text,
        };

        var newOption = new Option(response.text, response.id, true, true);
        $('#app_source').append(newOption).trigger('change');

        $('#app_source').trigger({
            type: 'select2:select',
            params: {
                data: data
            }
        });
    }
    //#endregion

    //#region Create Campaign
    $('#btnCreateCampaign').on('click', function (e) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("CreateCampaign", "Marketing", new { area = "Marketing" })",
            contentType: "application/json",
            dataType: "html",
            success: function (data) {
                $('#create_enquiry').modal('hide');
                $('#campaign_modal').attr("data-modal-from", "create-enquiry");

                $("#campaign_body").html(data);
                $('#campaign_modal').modal('show');
            },
            error: function (xhr) {
                console.log("Error : " + xhr.statusText);
            }
        });
    });
    //#endregion

    //#region Create Campaign On Modal Close
    $('#campaign_modal').on('hidden.bs.modal', function () {
        if (localStorage.getItem("newCampaign") != null) {
            var campaign = JSON.parse(localStorage.getItem("newCampaign"));
            setSource(campaign);
            setCampaign(campaign);
            localStorage.removeItem("newCampaign");
        }
    });
    //#endregion

    //#region Set Campaign
    var setCampaign = function (response) {

        var data = {
            "id": response.escId,
            "text": response.esc_title,
        };

        var newOption = new Option(response.esc_title, response.escId, true, true);
        $('#app_campaign').append(newOption).trigger('change');

        $('#app_campaign').trigger({
            type: 'select2:select',
            params: {
                data: data
            }
        });
    }
    //#endregion

    //#region Create Enquiry Click
    $('#btn_Insert_Enquiry').on('click', function (e) {
        e.preventDefault();
        if ($("#form_Create_Enquiry").valid()) {

            $('#btn_Insert_Enquiry').removeClass("btn btn-success");
            $('#btn_Insert_Enquiry').addClass("btn btn-success btn-loaders btn-icon");
            $('#btn_Insert_Enquiry').parent().addClass("curdrop");
            $('.btnCloseEnquiry').addClass("disabled");
            $('#btn_Insert_Enquiry').html("Creating.. Please Wait");

            var _enquiryInsert = {
                "app_branch": $("#app_branch :selected").val(),
                "app_fdate": $("#app_fdate").val(),
                "app_source": $("#app_source :selected").val(),
                "app_campaign": $("#app_campaign :selected").val(),
                "app_patient": $("#app_patient :selected").val(),
                "app_comments": $("#app_comments").val().trim(),
                "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("InsertEnquiry", "Marketing", new { area = "Marketing" })",
                dataType: 'JSON',
                data: _enquiryInsert,
                success: function (data) {
                    $('#btn_Insert_Enquiry').removeClass("btn btn-success btn-loaders btn-icon");
                    $('#btn_Insert_Enquiry').addClass("btn btn-success");
                    $('#btn_Insert_Enquiry').parent().removeClass("curdrop");
                    $('.btnCloseEnquiry').removeClass("disabled");
                    $('#btn_Insert_Enquiry').html("Create Enquiry");

                    if (data.isSuccess) {
                        if (data.isInserted) {
                            var alertPlaceholder = document.getElementById("MarketingAlert");
                            function alert(e, t) {
                                var l = document.createElement("div");
                                l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close"><span aria-hidden="true">&times;</span></button></div>', alertPlaceholder.append(l)
                            }
                            alert("<i class='fe fe-check-circle text-white'></i> <strong>Enquiry Created Successfully!</strong>", "success");
                            $('#create_enquiry').modal('toggle');
                            GetMarketing(0);
                            Timeout();
                        }
                        else {
                            let html = "<div class='alert alert-light-warning' role='alert'>" +
                                "<button type='button' class='btn-close mr-negative-16 text-warning' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                "<i class='fa fa-exclamation-triangle text-white'></i> <strong>Enquiry Already Exists!</strong><br/>" +
                                "</div>";

                            $("#errorCEnq").html(html);
                        }
                    }
                    else {
                        let html = "<div class='alert alert-danger' role='alert'>" +
                            "<button type='button' class='btn-close mr-negative-16 text-white' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                            "<strong>Validation Error Summary!</strong><br/><ul class='list-group mt-2'>";

                        $.each(data.message, function (index, value) {
                            html += "<li class='list-group-item list-group-item-danger text-black' style='width:300px'><small><i class='fa fa-circle me-2' aria-hidden='true'></i> " + value + "</small><li>";
                            var elem = $("#" + index);
                            if (elem.hasClass("select2-hidden-accessible")) {
                                $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                            }
                            else {
                                $(elem).addClass(" is-invalid");
                            }

                            setTimeout(function () {
                                if (elem.hasClass("select2-hidden-accessible")) {
                                    $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                                }
                                else {
                                    $(elem).removeClass("is-invalid");
                                }
                            }, 5000);
                        });

                        html += "</ul></div>";

                        $("#errorCEnq").html(html);
                    }
                },
                error: function (xhr) {
                    console.log("Error while creating Enquiry : " + xhr.statusText);
                    $('#btn_Insert_Enquiry').removeClass("btn btn-success btn-loaders btn-icon");
                    $('#btn_Insert_Enquiry').addClass("btn btn-success");
                    $('#btn_Insert_Enquiry').parent().removeClass("curdrop");
                    $('.btnCloseEnquiry').removeClass("disabled");
                    $('#btn_Insert_Enquiry').html("Create Enquiry");
                    $('#create_enquiry').modal('toggle');
                    Timeout();
                }
            });
        }
        else {
            $('.modal-body').animate({
                scrollTop: ($('.has-error').offset().top - 300)
            }, 2000);
        }
    });
    //#endregion
</script>