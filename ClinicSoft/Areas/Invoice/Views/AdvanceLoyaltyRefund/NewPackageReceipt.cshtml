
@model BusinessEntities.Invoice.Receipts
<div class="modal-header py-3 px-4">
    <h5 class="modal-title text-primary font-weight-semibold" id="exampleModalLongTitle">Create New Advance/Loyalty/Refund </h5>
    <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body p-4">
    <h3 class="card-title">

        <span class="badge rounded-pill bg-danger mt-2 pull-right" id="spn_outstanding"><span class="text-white"> <strong>Package Amount: </strong></span> <strong>&nbsp;@Model.total AED</strong></span>
    </h3>
    <div class="row">
        <div class="col-md-2 d-none">
            <div class="form-group">
                <div class="form-label">Type&nbsp;<span class="text-danger">*</span></div>
                <div class="btn-list">
                    <div class="btn-group" role="group" aria-label="Type of Receipt">
                        <input type="radio" class="btn-check" name="rdoType" id="rdoAdvance" value="Advance" autocomplete="off" checked>
                        <label class="btn btn-outline-info" for="rdoAdvance">Advance</label>
                    </div>
                </div>
            </div>
        </div>
        <form id="form_advance" >
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label"><span class="text-info">Date&nbsp;<span class="text-danger">*</span></span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fe fe-calendar"></i>
                                </div>
                            </div>
                            <input type="text" name="rec_date" id="rec_date" class="form-control font-weight-semibold" placeholder="Ex:DD-MMM-YYYY" autocomplete="off" />
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label"><span class="text-info">Receipt Code </span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text font-weight-bold text-dark" id="ig_rec_prefix">
                                    ADV-
                                </div>
                            </div>
                            <input class="form-control font-weight-semibold" placeholder="Eg:Rec-0001" type="text" readonly value="@Model.rec_code" name="rec_code" id="rec_code">
