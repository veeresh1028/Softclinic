            <div class="row">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-md-12">
                        <textarea id="rec_notes" name="rec_notes" class="form-control" rows="5" placeholder="Enter receipts notes..."></textarea>
                    </div>
                </div>
