                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text  ">
                                        <i class="fe fe-plus text-green pay"></i>
                                    </div>
                                </div>
