                    console.log(xhr);
                }
            })
        }
    //#endregion Copy Previous  CardioSystem

    //#region Add  Click
        $('#btn_Insert_CardioSystem').on('click', function (e) {
            e.preventDefault();
            if ($("#form_CardioSystem").valid()) {
                $('#btn_Insert_CardioSystem').removeClass("btn btn-success");
                $('#btn_Insert_CardioSystem').addClass("btn btn-success btn-loaders btn-icon");
                $('#btn_Insert_CardioSystem').html("Saving the Record....");
                var _dateInsert = {
                    "cvId": 0,
                    "cv_appId": @emr.appId,
                    "cv_1": $("#ucv_1").val(),
                    "cv_2": $("#ucv_2").val(),
                    "cv_3": $("#ucv_3").val(),
                    "cv_4": $("#ucv_4").val(),
                    "cv_5": $("#ucv_5").val(),
                    "cv_6": $("#ucv_6").val(),
                    "cv_1_type": $("#ucv_1_type").val(),
                    "cv_2_type": $("#ucv_2_type").val(),
                    "cv_3_type": $("#ucv_3_type").val(),
                    "cv_4_type": $("#ucv_4_type").val(),
                    "cv_5_type": $("#ucv_5_type").val(),
                    "cv_6_type": $("#ucv_6_type").val(),
                    "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                }
                console.log(_dateInsert);
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("InsertCardioVascular", "CardioVascular", new {area = "EMR" })",
                    dataType: 'JSON',
                    data: _dateInsert,
                    success: function (data) {
                        $('#btn_Insert_CardioSystem').removeClass("btn btn-success btn-loaders btn-icon");
                        $('#btn_Insert_CardioSystem').addClass("btn btn-success");
                        $('#btn_Insert_CardioSystem').html("Add");
                        if (data.isSuccess) {
                            if (data.isInserted) {
                                console.log(data);
                                var alertPlaceholder = document.getElementById("Alert");
                                function alert(e, t) {
                                    var l = document.createElement("div");
                                    l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                                        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                                }
                                alert("<i class='fe fe-check-circle text-white'></i>  Cardio Vascular Saved Successfully!", "success");
                                GetCardioVascular();
                                Timeout();
                            }
                            else {

                                let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                    "<div class='alert alert-warning' role='alert'>" +
                                    "<button type='button' class='btn-close mr-negative-16' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                    "<strong>Warning.. Cardio Vascular Alredy Exists..</strong><br/>" +
