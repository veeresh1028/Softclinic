@model BusinessEntities.EMR.CardioVascular
@using BusinessEntities;
@using System.Linq;
@using System.Security.Claims;
@{
    var claims = ClaimsPrincipal.Current.Identities.First().Claims.ToList();
    var emp_designation = claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).SingleOrDefault();
    EMRInfo emr = (EMRInfo)TempData["emr_data"];
    TempData.Keep("emr_data");
    ViewBag.Title = "Index";
    Layout = "~/Areas/EMR/Views/Shared/_EMR_Layout.cshtml";
}

<div class="row">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="col-12 col-sm-12 col-md-12 d-flex justify-content-center">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong>Error!&nbsp;</strong>@TempData["ErrorMessage"]
            </div>
        </div>
    }
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="card">

            <div class="card-body">
                <div>
                    <form id="form_CardioSystem" autocomplete="off" name="cardiovascular" ondrop="return false;" onpaste="return false;" oncut="return false;">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.cvId, new { @id = "ucvId", @value = "@Model.cvId" })
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 mb-4 font-weight-semibold">
                                <span class='badge bg-danger'>Required</span>
                                <span class="text-info" style="font-size:smaller">Please Fill atlest One Entry</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 mb-4 ">
                                <div class="row">
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div>
                                            <h4 class="page-title mb-0 text-primary">
                                                Cardio Vascular
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> Heart Rate:&nbsp;<span class="text-danger"> *</span></label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_1_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_1_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_1, new { @class = "form-control", @placeholder = "Enter Heart Rate", @id = "ucv_1" })
                                        </div>
                                    </div>
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> Rhythm:&nbsp;</label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_2_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_2_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_2, new { @class = "form-control", @placeholder = "Enter Rhythm", @id = "ucv_2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> JVP:&nbsp;</label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_3_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_3_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_3, new { @class = "form-control", @placeholder = "Enter JVP", @id = "ucv_3" })
                                        </div>
                                    </div>
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> Heart Sounds	:&nbsp;</label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_4_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_4_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_4, new { @class = "form-control", @placeholder = "Enter Heart Sounds", @id = "ucv_4" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> Murmur:&nbsp;</label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_5_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_5_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_5, new { @class = "form-control", @placeholder = "Enter Murmur", @id = "ucv_5" })
                                        </div>
                                    </div>
                                    <div class="col-sm-1 col-md-1 col-lg-1">
                                        <div class="form-group mb-3"><label class="form-label text-black text-align-left"> Peripheral Pulses	:&nbsp;</label></div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group mb-3">
                                            @Html.DropDownListFor(m => m.cv_6_type, new List<SelectListItem>
                                             {
                                                new SelectListItem{ Text="Normal", Value = "Normal" },
                                                new SelectListItem{ Text="Abnormal", Value = "Abnormal" },
                                                new SelectListItem{ Text="Not-Indicated", Value = "Not-Indicated" },
                                             }, "Select Type", new { @class = "form-select select2", @id = "ucv_6_type" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group mb-3">
                                            @Html.TextBoxFor(m => m.cv_6, new { @class = "form-control", @placeholder = "Enter Peripheral Pulses", @id = "ucv_6" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-lg-12 text-center">
                                        <div class="btn-list btn-animation">
                                            <button type="submit" class="btn btn-success" id="btn_Insert_CardioSystem">Add</button>
                                            <button type="button" class="btn btn-outline-dark" id="btn_Reset_CardioSystem">Reset</button>
                                            <button type="submit" class="btn btn-sm btn-outline-warning" id="btn_Update_CardioSystem">Save Changes</button>
                                            <button type="submit" class="btn btn-sm btn-outline-danger" id="btn_Delete_CardioSystem">Delete</button>
                                            <button type="submit" class="btn btn-sm btn-outline-light" id="btn_Print" value="Print" onclick="ViewCardioSystem(this.cvId)" style="display:none">
                                                <i class="fa fa-print">&nbsp;&nbsp;</i>Print
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div>
                    <h4 class="page-title mb-0 text-primary">
                        Previous History
                    </h4>
                </div>
                <div class="table-responsive">
                    <table id="tbl_PreCardioVascular" class="table table-striped table-bordered text-nowrap" style="width: 100%; cursor: pointer;">
                        <thead>
                            <tr style="color: #fff !important; background-color: #808080; border-color: #3C457D; ">
                                <th class="border-bottom-0 font-weight-semibold text-white">#</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Date</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Doctor</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Heart Rate</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Rhythm</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">JVP</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Heart Sounds</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Murmur</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Peripheral Pulses</th>
                                <th class="border-bottom-0 font-weight-semibold text-white">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="cv_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" id="size">
        <div class="modal-content" id="cv_body">
        </div>
    </div>
</div>

@*@section myScripts{*@

<script>
    //#region Page Load
        $(function () {
            BindDataTableP(null);
            GetPreviousCardioVascular();
            GetCardioVascular();
            validate();
            BindSelect();
            if ("@emp_designation.ToString()" === "Super Administrator") {
               $("#btn_Insert_CardioSystem").show();
                $("#btn_Reset_CardioSystem").show();
            } else {
                if ("@emr.set_emr_lock" == "NoLock") {
                    $("#btn_Insert_CardioSystem").show();
                    $("#btn_Reset_CardioSystem").show();

                }
                else {
                    if ("@emr.app_ae_date" >= "@emr.today") {
                        $("#btn_Insert_CardioSystem").show();
                        $("#btn_Reset_CardioSystem").show();
                    }
                    else {
                        $("#btn_Insert_CardioSystem").hide();
                        $("#btn_Reset_CardioSystem").hide();
                    }
                }
            }

        });
    //#endregion Page Load

    //#region Reset
        $('#btn_Reset_CardioSystem').on('click', function (e) {
            e.preventDefault();
            clearControls();
        });
    //#endregion Reset

    //#region Load CardioVascular
        var GetCardioVascular = function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAllCardioVascular", "CardioVascular", new { area = "EMR" })?appId=" + "@emr.appId",
                success: function (response) {
                    if (response.isAuthorized != false) {
                        var _data = response;
                        console.log(response);
                        if (_data.length > 0) {
                            console.log(response[0].cvId);
                            $('#ucvId').val(response[0].cvId);
                            //hide the Copy Data
                            var oTable = $('#tbl_PreCardioVascular').dataTable();
                            oTable.$('#btn_Copy_CardioSystem').hide();

                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                $("#btn_Update_CardioSystem,#btn_Delete_CardioSystem").show();
                            } else {
                                if ("@emr.set_emr_lock" == "NoLock") {
                                    $("#btn_Update_CardioSystem,#btn_Delete_CardioSystem").show();

                                }
                                else {
                                    if ("@emr.app_ae_date" >= "@emr.today") {
                                        $("#btn_Update_CardioSystem,#btn_Delete_CardioSystem").show();
                                    }
                                    else {
                                        $("#btn_Update_CardioSystem,#btn_Delete_CardioSystem").hide();
                                    }
                                }
                            }
                            $("#btn_Insert_CardioSystem").hide();
                            $("#btn_Reset_CardioSystem").hide();

                        }
                        else {
                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                $("#btn_Insert_CardioSystem").show();
                                $("#btn_Reset_CardioSystem").show();
                            } else {
                                if ("@emr.set_emr_lock" == "NoLock") {
                                    $("#btn_Insert_CardioSystem").show();
                                    $("#btn_Reset_CardioSystem").show();

                                }
                                else {
                                    if ("@emr.app_ae_date" >= "@emr.today") {
                                        $("#btn_Insert_CardioSystem").show();
                                        $("#btn_Reset_CardioSystem").show();
                                    }
                                    else {
                                        $("#btn_Insert_CardioSystem").hide();
                                        $("#btn_Reset_CardioSystem").hide();
                                    }
                                }
                            }
                            $("#btn_Update_CardioSystem,#btn_Delete_CardioSystem").hide();

                        }
                    }
                    else {
                        console.log("You are not Authorized!");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            })
        }
    //#endregion Load CardioVascular

    //#region Load PreviousCardioVascular
        var GetPreviousCardioVascular = function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAllPreCardioVascular", "CardioVascular", new { area = "EMR" })?appId=" + "@emr.appId" + "&patId=" + @emr.patId,
                success: function (response) {
                    if (response.isAuthorized != false) {
                        var table;
                        if ($.fn.dataTable.isDataTable('#tbl_PreCardioVascular')) {
                            table = $('#tbl_PreCardioVascular').DataTable();
                            table.clear();
                            table.rows.add(response).draw();
                        }
                        else {
                            console.log(response);
                            BindDataTableP(response);
                        }
                    }
                    else {
                        console.log("You are not Authorized!");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            })
        }
    //#endregion Load PreviousCardioVascular

    //#region Previous Bind Datatable
        var BindDataTableP = function (response) {
            var table = $("#tbl_PreCardioVascular").DataTable({
                fixedHeader: {
                    header: true,
                    footer: true
                },
                processing: true,
                "deferRender": true,
                "pageLength": 100,
                "retrieve": true,
                lengthChange: true,
                "aaData": response,
                "aoColumns": [
                    {
                        "mData": "cvId",
                        "orderable": false,
                        "searchable": false,
                        "className": "text-center",
                        "render": function (data, type, row, meta) {
                            let _index = (meta.row) + 1;
                            if (_index >= 10) {
                                return "<a href='javascript:void(0)' class='fs-13 font-weight-bold'>" + _index + "</a>";
                            }
                            else {
                                return "<a href='javascript:void(0)' class='fs-13 font-weight-bold'>0" + _index + "</a>";
                            }
                        }
                    },

                    {
                        "mData": "app_fdate",
                        "className": "text-left",
                        "render": function (data) {
                            return moment(data).format('DD-MM-YYYY')
                        }
                    },
                    {
                        "mData": "doctor_name",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cv_1_type",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cv_2_type",
                        "className": 'text-justify text-wrap'

                    },
                    {
                        "mData": "cv_3_type",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cv_4_type",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cv_5_type",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cv_6_type",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "cvId",
                        "className": 'btn-view text-center',
                        "orderable": false,
                        "searchable": false,
                        "render": function (cvId, type, full, meta) {
                            var Action = '';
                            //Copy Data
                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                Action += '<a id=btn_Copy_CardioSystem  onclick="CopyPrevious(' + cvId + ')"><i class="fa fa-lg fa-copy" ></i></a>';
                                }
                                else {
                                if ("@emr.set_emr_lock" == "NoLock") {
                                    Action += '<a id=btn_Copy_CardioSystem  onclick="CopyPrevious(' + cvId + ')"><i class="fa fa-lg fa-copy" ></i></a>';
                                    }
                                    else {
                                        if ("@emr.app_ae_date" >= "@emr.today") {
                                            Action += '<a id=btn_Copy_CardioSystem  onclick="CopyPrevious(' + cvId + ')"><i class="fa fa-lg fa-copy" ></i></a>';
                                        }
                                        else {
                                            Action += ''
                                            }
                                    }
                                }

                                return Action;
                            }
                    },
                ],
                order: [[0, 'asc']],
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '<span class="text-primary font-weight-semi-bold">Search By Code/Tittle</span>',
                    lengthMenu: '_MENU_',
                    scrollX: "100%",
                },
                scrollX: true,
                scrollY: 500,
                scrollCollapse: true,
                buttons: [
                    {
                        extend: 'excel',
                        title: 'Previous Cardio Vascular',
                        footer: 'true',
                        className: 'oldbutton',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    },
                    {
                        extend: 'pdf',
                        title: 'Previous Cardio Vascular',
                        footer: 'true',
                        className: 'oldbutton',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    },
                    {
                        extend: 'csv',
                        title: 'Previous Cardio Vascular',
                        footer: 'true',
                        className: 'oldbutton',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    },
                    {
                        extend: 'print',
                        title: 'Previous Cardio Vascular',
                        footer: 'true',
                        className: 'oldbutton',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    }
                ]
            });
            table.buttons().container().appendTo('#tbl_PreCardioVascular_wrapper .col-md-6:eq(0)');
        };
    //#endregion Previous Bind Datatable

    //#region Copy Previous  CardioSystem
        function CopyPrevious(cvId) {
            var x = $("#btn_Copy_CardioSystem");
                $.ajax({
                type: "GET",
                    url: "@Url.Action("CopyCardioVascular", "CardioVascular", new { area = "EMR" })?cvId=" + cvId,
                success: function (response) {
                    if (response.isAuthorized != false) {
                        var _data = response;
                        console.log(response);
                        if (_data.length > 0) {
                            console.log(response[0].cv_3_type);
                            $('#ucv_1').val(response[0].cv_1);
                            $('#ucv_2').val(response[0].cv_2);
                            $('#ucv_3').val(response[0].cv_3);
                            $('#ucv_4').val(response[0].cv_4);
                            $('#ucv_5').val(response[0].cv_5);
                            $('#ucv_6').val(response[0].cv_6);
                            $('#ucv_1_type').val(response[0].cv_1_type);
                            $('#ucv_2_type').val(response[0].cv_2_type);
                            $('#ucv_3_type').val(response[0].cv_3_type);
                            $('#ucv_4_type').val(response[0].cv_4_type);
                            $('#ucv_5_type').val(response[0].cv_5_type);
                            $('#ucv_6_type').val(response[0].cv_6_type);
                            BindSelect();
                        }

