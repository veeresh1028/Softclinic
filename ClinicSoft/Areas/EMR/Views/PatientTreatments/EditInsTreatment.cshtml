        var _data = "@Model.pt_sur";

        $('#upt_sur').SumoSelect({
            placeholder: 'Select Surface(s)',
            captionFormat: '{0} Surface(s) Selected',
            captionFormatAllSelected: 'All {0} Surfaces selected!',
