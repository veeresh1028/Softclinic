                <select placeholder="Select Any" class="form-select select2 mb-2" id="upt_treatment" name="upt_treatment">
                </select>
                <input type="hidden" value="0" id="uhi_pt_tr_code">
                <input type="hidden" value="0" id="uhi_pt_tr_name">
                <input type="hidden" value="0" id="uhi_isPackage">
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Notes&nbsp;</label>
                <input class="form-control font-weight-semibold" placeholder="Enter Notes" type="text" value="@Model.pt_notes" id="upt_notes" name="upt_notes" maxlength="250" />
            </div>
        </div>

        <div class="col-md-1 d-none">
            <div class="form-group mb-3">
                <label class="form-label text-black">Teeth&nbsp;</label>
                <div class="form-group mb-3">
                    <select class="form-control" id="upt_teeth" name="upt_teeth">
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-2 d-none">
            <div class="form-group mb-3">
                <label class="form-label text-black">Surface&nbsp;</label>
                <div class="form-group mb-3">
                    <select class="form-control" id="upt_sur" name="upt_sur" multiple="multiple">
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group">
                <label class="form-label">Qty&nbsp;<span class="text-danger">*</span></label>
                <input class="form-control text-end font-weight-semibold" placeholder="" type="text" value="@Model.pt_qty" id="upt_qty" name="upt_qty" oninput="validate(this,1000)">
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group">
                <label class="form-label">Session</label>
                <input class="form-control text-end font-weight-semibold" placeholder="" type="text" value="@Model.pt_ses" id="upt_ses" name="upt_ses" oninput="validate(this,100)">
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group">
                <label class="form-label">Unit Price&nbsp;<span class="text-danger">*</span></label>
                <input class="form-control text-end font-weight-semibold" placeholder="" type="text" value="@Model.pt_uprice" readonly="readonly" id="upt_uprice" name="upt_uprice" oninput="validate(this,100000)" />
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group">
                <label class="form-label">Total&nbsp;<span class="text-danger">*</span></label>
                <input class="form-control text-end font-weight-semibold" placeholder="" type="text" value="@Model.pt_total" id="upt_total" name="upt_total" oninput="validate(this,0)" readonly="readonly" />
            </div>
        </div>

        <div class="col-md-1 d-none">
            <div class="form-group">
                <label class="form-label">Discount</label>
                <input class="form-control text-end font-weight-semibold" placeholder="" type="text" id="upt_disc" name="upt_disc" oninput="validate(this,100000)" />
            </div>
        </div>

        <div class="col-md-1 d-none">
            <div class="form-group">
                <label class="form-label">Disc.Type</label>
