            dataType: "json",
            async: false,
            success: function (response) {
                var data = {
                    "id": response[0].id,
                    "text": response[0].text,
                };

                $('#upt_treatment').val(response[0].text);

                var newOption = new Option(response[0].text, response[0].id, true, true);

