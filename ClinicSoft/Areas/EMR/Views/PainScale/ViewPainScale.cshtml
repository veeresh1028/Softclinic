<script>
    $(function () {
        var from = "@Model.pa_pain"; // reading input value
        if (from == 0) {
            $('#img11').addClass("btn  btn-outline-success");
        } else if (from == 2) {
            $('#img12').addClass("btn  btn-outline-success");
        } else if (from == 4) {
            $('#img13').addClass("btn  btn-outline-success");
        } else if (from == 6) {
            $('#img14').addClass("btn  btn-outline-success");
        } else if (from == 8) {
            $('#img15').addClass("btn  btn-outline-success");
        } else if (from == 10) {
