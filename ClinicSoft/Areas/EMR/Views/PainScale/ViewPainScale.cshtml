            $('#img14').removeClass("btn  btn-outline-success");
            $('#img15').removeClass("btn  btn-outline-success");
            $('#img16').removeClass("btn  btn-outline-success");
        }

        $('#pa_pain1').ionRangeSlider({
            min: 0,
            max: 10,
            from: "@Model.pa_pain",
        });

        console.log("@Model.pa_pain");
    });
    $('#pa_modal').modal('toggle');
</script>