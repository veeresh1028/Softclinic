                buttons: [
                    {
                        extend: 'excel',
                        title: 'Previous PainScale',
                        footer: 'true',
                        className: 'oldbutton',
                        exportOptions: {
                            columns: [0, 1, 2]
                        }
                    },
                    {
                        extend: 'pdf',
