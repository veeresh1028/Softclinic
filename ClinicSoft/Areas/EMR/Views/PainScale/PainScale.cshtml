<script>
    //#region Page Load
        $(function () {
            BindDataTablePainP(null);
            GetPreviousPainScale();
            GetPainScale();
            validate();
            if ("@emp_designation.ToString()" === "Super Administrator") {
               $("#btn_Insert_Pain").show();
            } else {
                if ("@emr.set_emr_lock" == "NoLock") {
                    $("#btn_Insert_Pain").show();

                }
                else {
                    if ("@emr.app_ae_date" >= "@emr.today") {
                        $("#btn_Insert_Pain").show();
                    }
                    else {
                        $("#btn_Insert_Pain").hide();
                    }
                }
            }
            $('#pa_pain').ionRangeSlider({
                min: 0,
                max: 10,
                from:0,
            });
        });
    //#endregion Page Load

    //#region Slider Event
    $('#pa_pain').on("change", function () {
        var $inp = $(this);
        var from = $inp.prop("value"); // reading input value
        var from2 = $inp.data("from"); // reading input data-from attribute
        if (from == 0) {
            $('#img1').addClass("btn  btn-outline-success");
        }else if (from == 2) {
            $('#img2').addClass("btn  btn-outline-success");
        }else if (from == 4) {
            $('#img3').addClass("btn  btn-outline-success");
        }else if (from == 6) {
            $('#img4').addClass("btn  btn-outline-success");
        }else if (from == 8) {
            $('#img5').addClass("btn  btn-outline-success");
        }else if (from == 10) {
            $('#img6').addClass("btn  btn-outline-success");
        } else {
            $('#img1').removeClass("btn  btn-outline-success");
            $('#img2').removeClass("btn  btn-outline-success");
            $('#img3').removeClass("btn  btn-outline-success");
            $('#img4').removeClass("btn  btn-outline-success");
            $('#img5').removeClass("btn  btn-outline-success");
            $('#img6').removeClass("btn  btn-outline-success");
        }
    });
    //#endregion Slider Event

    //#region Load PainScale
        var GetPainScale = function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAllPainScale", "PainScale", new { area = "EMR" })?appId=" + "@emr.appId",
                success: function (response) {
                    if (response.isAuthorized != false) {
                        var _data = response;
                        if (_data.length > 0) {
                            $('#upaId').val(response[0].paId);
                            var instance = $('#pa_pain').data("ionRangeSlider");
                            instance.update({
                                from: response[0].pa_pain //your new value ionRangeSlider
                            });
                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                $("#btn_Update_Pain,#btn_Delete_Pain,#btn_Print_Pain").show();
                            } else {
                                if ("@emr.set_emr_lock" == "NoLock") {
                                    $("#btn_Update_Pain,#btn_Delete_Pain,#btn_Print_Pain").show();

                                }
                                else {
                                    if ("@emr.app_ae_date" >= "@emr.today") {
                                        $("#btn_Update_Pain,#btn_Delete_Pain,#btn_Print_Pain").show();
                                    }
                                    else {
                                        $("#btn_Update_Pain,#btn_Delete_Pain,#btn_Print_Pain").hide();
                                    }
                                }
                            }
                            $("#btn_Insert_Pain").hide();

                        }
                        else {
                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                $("#btn_Insert_Pain").show();
                            } else {
                                if ("@emr.set_emr_lock" == "NoLock") {
                                    $("#btn_Insert_Pain").show();
                                }
                                else {
                                     if ("@emr.app_ae_date" >= "@emr.today") {
                                        $("#btn_Insert_Pain").show();
                                    }
                                    else {
                                        $("#btn_Insert_Pain").hide();
                                    }
                                }
                            }
                            $("#btn_Update_Pain,#btn_Delete_Pain,#btn_Print_Pain").hide();

                        }
                    }
                    else {
                        console.log("You are not Authorized!");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            }).done(function () {
                resizedt();
            });
        }
    //#endregion Load PainScale

    //#region Load PreviousPainScale
        var GetPreviousPainScale = function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAllPrePainScale", "PainScale", new { area = "EMR" })?appId=" + "@emr.appId" + "&patId=" + @emr.patId,
                success: function (response) {
                    if (response.isAuthorized != false) {
                        var table;
                        if ($.fn.dataTable.isDataTable('#tbl_PrePainScale')) {
                            table = $('#tbl_PrePainScale').DataTable();
                            table.clear();
                            table.rows.add(response).draw();
                        }
                        else {
                            console.log(response);
                            BindDataTablePainP(response);
                        }
                    }
                    else {
                        console.log("You are not Authorized!");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            })
        }
    //#endregion Load PreviousPainScale

    //#region Previous Bind Datatable
        var BindDataTablePainP = function (response) {
            var table = $("#tbl_PrePainScale").DataTable({
                fixedHeader: {
                    header: true,
                    footer: true
                },
                processing: true,
                "deferRender": true,
                "pageLength": 100,
                "retrieve": true,
                lengthChange: true,
                "aaData": response,
                "aoColumns": [
                    {
                        "mData": "paId",
                        "orderable": false,
                        "searchable": false,
                        "className": "text-center",
                        "render": function (data, type, row, meta) {
                            let _index = (meta.row) + 1;
                            if (_index >= 10) {
                                return "<a href='javascript:void(0)' class='fs-13 font-weight-bold'>" + _index + "</a>";
                            }
                            else {
                                return "<a href='javascript:void(0)' class='fs-13 font-weight-bold'>0" + _index + "</a>";
                            }
                        }
                    },
                    {
                        "mData": "app_fdate",
                        "className": "text-left",
                        "render": function (data) {
                            return moment(data).format('DD-MM-YYYY')
                        }
                    },
                    {
                        "mData": "doctor_name",
                        "className": 'text-justify text-wrap'
                    },
                    {
                        "mData": "paId",
                        "className": 'btn-view text-center',
                        "orderable": false,
                        "searchable": false,
                        "render": function (paId, type, full, meta) {
                            var Action = '';
                            //Copy Data
                            if ("@emp_designation.ToString()" === "Super Administrator") {
                                Action += '<a id=btn_Copy_Pain onclick="CopyPrevious(' + paId + ')" class="me-2" ><i class="fa fa-lg fa-copy" ></i></a>';
                                }
                                else {
                                    if ("@emr.set_emr_lock" != "NoLock") {
                                        if ("@emr.app_ae_date" >= "@emr.today") {
                                            Action += '<a id=btn_Copy_Pain onclick="CopyPrevious(' + paId + ')" class="me-2" ><i class="fa fa-lg fa-copy" ></i></a>';
                                        }
                                        else {
                                            Action += ''
                                            }
                                    }
                                    else {
                                        Action += '<a id=btn_Copy_Pain onclick="CopyPrevious(' + paId + ')" class="me-2" ><i class="fa fa-lg fa-copy" ></i></a>';
                                    }
                                }
