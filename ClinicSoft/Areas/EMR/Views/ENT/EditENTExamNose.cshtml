<script>
    //#region Page Load
        $(function () {
            if ("@emp_designation.ToString()" === "Super Administrator") {
                $("#btn_Update_ENTNose,#btn_Delete_ENTNose").show();
            } else {
                if ("@emr.set_emr_lock" == "NoLock") {
                    $("#btn_Update_ENTNose,#btn_Delete_ENTNose").show();

                }
                else {
                    if ("@emr.app_ae_date" >= "@emr.today") {
                        $("#btn_Update_ENTNose,#btn_Delete_ENTNose").show();
                    }
                    else {
                        $("#btn_Update_ENTNose,#btn_Delete_ENTNose").hide();
                    }
                }
            }
        });

    //#endregion Page Load



     //#endregion Get CheckedValues
    //#region Update  Button Click
        $('#btn_Update_ENTNose').on('click', function (e) {
             e.preventDefault();
                $('#btn_Update_ENTNose').removeClass("btn btn-sm btn-success");
                $('#btn_Update_ENTNose').addClass("btn btn-sm btn-success btn-loaders btn-icon");
                $('#btn_Update_ENTNose').html("Updating the Record....");

                var _dataInsert = {
                    "enId": @Model.enId,
                    "en_appId": $("#uen_appId").val(),
                    "en_ext": $("#uen_ext").val(),
                    "en_vest": $("#uen_vest").val(),
                    "en_floor": $("#uen_floor").val(),
                    "en_sept": $("#uen_sept").val(),
                    "en_nasal": $("#uen_nasal").val(),
                    "en_imear": $("#uen_imear").val(),
                    "en_imeal": $("#uen_imeal").val(),
                    "en_iturbr": $("#uen_iturbr").val(),
                    "en_iturbl": $("#uen_iturbl").val(),
                    "en_mmear": $("#uen_mmear").val(),
                    "en_mmeal": $("#uen_mmeal").val(),
                    "en_mturbr": $("#uen_mturbr").val(),
                    "en_mturbl": $("#uen_mturbl").val(),
                    "en_smear": $("#uen_smear").val(),
                    "en_smeal": $("#uen_smeal").val(),
                    "en_sturbr": $("#uen_sturbr").val(),
                    "en_sturbl": $("#uen_sturbl").val(),
                    "en_choane": $("#uen_choane").val(),
                    "en_nasop": $("#uen_nasop").val(),
                    "en_eust": $("#uen_eust").val(),
                    "en_rose": $("#uen_rose").val(),
                    "en_lymp": $("#uen_lymp").val(),
                    "en_other": $("#uen_other").val(),
                    "en_frontr": $("#uen_frontr").val(),
                    "en_frontl": $("#uen_frontl").val(),
                    "en_maxilr": $("#uen_maxilr").val(),
                    "en_maxill": $("#uen_maxill").val(),
                    "en_ethmr": $("#uen_ethmr").val(),
                    "en_ethml": $("#uen_ethml").val(),
                    "en_notes": $("#uen_notes").val(),
                    "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                }
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateENTExamNose", "ENT", new { area = "EMR" })",
                    dataType: 'JSON',
                    data: _dataInsert,
                    success: function (data) {
                        $('#btn_Update_ENTNose').removeClass("btn btn-sm btn-warning btn-loaders btn-icon");
                        $('#btn_Update_ENTNose').addClass("btn btn-sm btn-warning");
                        $('#btn_Update_ENTNose').html("Save Changes");
                        if (data.isSuccess) {
                            if (data.isInserted) {
                                var alertPlaceholder = document.getElementById("Alert");
                                function alert(e, t) {
                                    var l = document.createElement("div");
                                    l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                                        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                                }
                                alert("<i class='fe fe-check-circle text-white'></i> ENT Examination Nose Updated Successfully!", "success");
                                Timeout();
                                GetENTExamNose();
                            }
                            else {
                                let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                    "<div class='alert alert-warning' role='alert'>" +
                                    "<button type='button' class='btn-close mr-negative-16' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                    "<strong>Warning.. ENT Examination Nose Alredy Exists..</strong><br/>" +
                                    "</div></div>";
                                $("#error").html(html);
                            }
                        }
                        else {
                            let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                "<div class='alert alert-danger' role='alert'>" +
                                "<button type='button' class='btn-close mr-negative-16' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                "<strong>Validation Error.. Please correct before you submit the form!&nbsp;</strong><br/><ul>";
                            $.each(data.message, function (index, value) {
                                html += "<li><small>" + value + "</small><li>";
                                var elem = $("#" + index);
                                if (elem.hasClass("select2-hidden-accessible")) {
                                    $("#select2-" + elem.attr("id") + "-container").parent().addClass('error');
                                }
                                else {
                                    $(elem).addClass(" is-invalid");
                                }

                                setTimeout(function () {
                                    if (elem.hasClass("select2-hidden-accessible")) {
                                        $("#select2-" + elem.attr("id") + "-container").parent().removeClass('error');
                                    }
                                    else {
                                        $(elem).removeClass("is-invalid");
                                    }
                                }, 5000);
                            });
                            html += "</ul></div></div>";
                            $("#error").html(html);
                        }
                    },
                    error: function (xhr) {
                        $('#btn_Update_ENTNose').removeClass("btn btn-sm btn-warning btn-loaders btn-icon");
                        $('#btn_Update_ENTNose').addClass("btn btn-sm btn-warning");
                        $('#btn_Update_ENTNose').html("Save Changes");
                        Timeout();
                    }
                });
        });
    //#endregion Update  Button Click


    //#region Delete Click
        $('#btn_Delete_ENTNose').on('click', function (e) {
            e.preventDefault();
            $('#btn_Delete_ENTNose').removeClass("btn btn-sm btn-success");
            $('#btn_Delete_ENTNose').addClass("btn btn-sm btn-success btn-loaders btn-icon");
            $('#btn_Delete_ENTNose').html("Deleting the Record....");

                $.ajax({
                    url: '@Url.Action("DeleteENTExamNose", "ENT", new { area = "EMR" })?enId=' + @Model.enId,
                    type: "POST",
                    dataType: 'JSON',
                    success: function (data) {
                        $('#btn_Delete_ENTNose').removeClass("btn btn-sm btn-success btn-loaders btn-icon");
                        $('#btn_Delete_ENTNose').addClass("btn btn-sm btn-warning");
                        $('#btn_Delete_ENTNose').html("Delete");
                        if (data.isAuthorized) {
                            if (data.success) {
                                var alertPlaceholder = document.getElementById("Alert");
                                function alert(e, t) {
                                    var l = document.createElement("div");
                                    l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                                        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                                }
                                alert("<i class='fe fe-check-circle text-white'></i> ENT Examination Nose Deleted Successfully!", "success");
                                clearControls();
                                GetENTExamNose();
                                Timeout();
                            }
                            else {
                                let html = "<div class='col-12 col-sm-12 col-md-12 d-flex justify-content-center'>" +
                                    "<div class='alert alert-warning' role='alert'>" +
                                    "<button type='button' class='btn-close mr-negative-16' data-bs-dismiss='alert' aria-hidden='true' aria-label='Close'>×</button>" +
                                    "<strong>Error!.. Failed to Delete..</strong><br/>" +
                                    "</div></div>";
                                $("#error").html(html);
                            }
                        }
                        else {
                            var alertPlaceholder = document.getElementById("Alert");
                            function alert(e, t) {
                                var l = document.createElement("div");
                                l.innerHTML = '<div class="alert alert-' + t + ' alert-dismissible" role="alert">' + e +
                                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="Close">x</button></div>', alertPlaceholder.append(l)
                            }
                            alert("<i class='fe fe-check-circle text-white'></i> You do not have Enough Privileges to Delete this Designation!", "Access Denied!");
                        }
                    },
                    error: function (xhr) {
                        $('#btn_Delete_ENTNose').removeClass("btn btn-sm btn-success btn-loaders btn-icon");
                        $('#btn_Delete_ENTNose').addClass("btn btn-sm btn-Delete");
                        $('#btn_Delete_ENTNose').html("Delete");
                        Timeout();
                    }
                })
        });
    //#endregion Delete Click

    //#region Clear Controls
