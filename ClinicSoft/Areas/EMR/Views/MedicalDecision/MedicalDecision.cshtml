                                            @Html.TextAreaFor(m => m.md_txt1, new { @class = "form-control", @placeholder = "Enter Notes on Review of old Records", @row = "4", @id = "umd_txt1" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Treatment Plan:&nbsp;</label>
                                            @Html.TextAreaFor(m => m.md_txt5, new { @class = "form-control", @placeholder = "Enter Treatment Plan:", @row = "4", @id = "umd_txt5" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Follow up:&nbsp;</label>
                                            @Html.TextAreaFor(m => m.md_txt6, new { @class = "form-control", @placeholder = "Enter Follow up", @row = "4", @id = "umd_txt6" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Other:&nbsp;<span class="text-danger">*</span></label>
                                            @Html.TextAreaFor(m => m.md_txt7, new { @class = "form-control", @placeholder = "Enter Other", @row = "4", @id = "umd_txt7" })
                                        </div>
                                    </div>
                                </div>

